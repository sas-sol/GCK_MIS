@model IEnumerable<MeherEstateDevelopers.Models.Service_PurchaseOrder>
<div class="row">
    @*<button type="button" style="text-align:right" class="btn btn-info all-comp-rep">Generate Comparitive Report</button>*@
    @*<button type="button" style="text-align:left" class="btn btn-success all-ser-rep">Generate Purchase Orders Report</button>*@
</div>
<table class="table table-bordered potbl" cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th width="750px">Month</th>
            <th width="750px">Department</th>
            <th width="750px">Project</th>
            <th width="750px">Items</th>
            <th width="120px">PO#</th>
            <th width="120px">Date</th>
            <th width="120px">Generated By</th>
            <th width="120px">Vendor</th>
            <th width="50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var po in Model.GroupBy(x => new { x.PO_Number, x.Dep_Name, x.Prj_Name, x.Prj_Offsite, x.DateTime, x.CreatedBy_Name, x.Vendor_Name, x.Summary_Gen, Summary_Date = string.Format("{0:yyyy-MM-dd}", x.Summary_Date), x.Group_Id }).OrderByDescending(x => x.Key.DateTime).ToList())
            {
                int ii = 1;
                <tr id="@po.Key.PO_Number" data-grp="@po.Key.Group_Id">

                    <td class="pur-req-prdct-name">@string.Format("{0:MMMM - yyyy}", po.Key.DateTime)</td>
                    <td>@po.Key.Dep_Name</td>
                    <td>@po.Key.Prj_Name</td>
                    <td class="tdscrol" style="">
                        <table class="table" style="margin-bottom:0px; border:none">
                            <thead>
                                <tr>
                                    <th width="5%">Sr</th>
                                    <th width="70%">Item</th>
                                    <th width="25%">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in po)
                                {
                                    string cl = (v.Completed == true) ? "bgc-green-50" : "bgc-red-50";
                                    <tr class="@cl">
                                        <th style="max-width:50px">@ii</th>
                                        <td>
                                            @v.Item_Name
                                            <br />
                                            @{
                                                string dims = string.Empty;
                                                if (!(v.Length is null))
                                                {
                                                    dims += " /Length - " + v.Length + " " + v.L_UOM;
                                                }
                                                if (!(v.Width is null))
                                                {
                                                    dims += " /Width - " + v.Width + " " + v.W_UOM;
                                                }
                                                if (!(v.Heigth is null))
                                                {
                                                    dims += " /Height - " + v.Heigth + " " + v.H_UOM;
                                                }
                                                if (!(v.Breadth is null))
                                                {
                                                    dims += " /Breadth - " + v.Breadth + " " + v.B_UOM;
                                                }
                                            }
                                            @dims
                                        </td>
                                        <td>@string.Format("{0:0,0.##}", v.Purchase_Rate)</td>
                                    </tr>
                                    ii++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Total PO Value</th>
                                    <th>@string.Format("{0:0,0.##}", po.Sum(x => x.Purchase_Rate))</th>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                    <td class=" pointer">
                        @if (po.Key.CreatedBy_Name != null)
                        {
                            <a href="/Services/PrintPurchaseOrder?poNum=@po.Key.PO_Number" target="_blank">@po.Key.PO_Number <i class="ti-eye"></i></a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary gen-po-ser"  data-po="@po.Key.PO_Number" id="@po.Key.Group_Id" style="max-width:100px;height:auto;text-overflow: clip;white-space: break-spaces;">Print Purchase Orders</button>
                        }
                    </td>
                    <td>@string.Format("{0:dd-MMM-yyyy}", po.Key.DateTime)</td>
                    <td>@po.Key.CreatedBy_Name</td>
                    <td>@po.Key.Vendor_Name</td>
                    <td>
                        <ul style="list-style:none;margin-left:0px;">
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle no-after peers" data-toggle="dropdown">
                                    <i class="ti-more-alt  c-grey-900" style="transform:rotate(90deg);"></i>
                                </a>
                                <ul class="dropdown-menu" style="padding:10px;width:210px !important">
                                    @if (User.IsInRole("Pay Advance Payable") || User.IsInRole("Administrator"))
                                    {
                                        <li class="ser-wo-inv mt-1"><i class="ti-panel"></i>&nbsp;&nbsp;Pay Advance </li>
                                    }
                                    @if (po.Key.CreatedBy_Name == null || User.IsInRole("Reverse to Department") || User.IsInRole("Administrator"))
                                    {
                                        <li class="sen-bk-to-dep-wo mt-1" data-ponum="@po.Key.PO_Number" data-grpid="@po.Key.Group_Id"><i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Send Back to Department</li>
                                    }
                                    <li class="up-ser-pur-order" data-toggle="modal" data-target="#Modal" data-bidIden="@po.Key.PO_Number"><i class="ti-pencil"></i>&nbsp;&nbsp;Revise</li>
                                    <li class="mt-1"><i class="ti-panel"></i>&nbsp;&nbsp;<a href="/Services/BidsListing?Group=@po.Key.Group_Id" target="_blank">Requisition Details</a></li>
                                    <li class="mt-1 gen-com-ser" data-po="@po.Key.PO_Number" data-grpid="@po.Key.Group_Id"><i class="ti-bookmark"></i>&nbsp;&nbsp;Generate Completion Certificate</li>
                                </ul>
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No Record Exists</td>
            </tr>
        }
    </tbody>
</table>
<style>
    .tdscrol {
        padding: 0px;
        max-height: 500px;
        overflow-y: scroll;
        display: block;
        padding: 0px !important;
    }
</style>
<script>
    $(document).ready(function () {
        $('.potbl').DataTable({
            //dom: 'Bfrtip',
            //buttons: [
            //    'copy', 'csv', 'excel', 'pdf', 'print'
            //],
            //order: [[2, 'asc'], [0, 'asc']],
            ordering: false,
            rowGroup: { dataSrc: [0, 1] },
            columnDefs: [{ targets: 5, type: "date-eu" }],
            columnDefs: [{ targets: [1, 0], visible: false }]
        });
    });

    $(document).on('click', '.gen-dev-no', function () {
        let po = $(this).data('grpid');
        window.open("/Procurement/DeliverInAutoView?po=" + po);
    });
</script>
