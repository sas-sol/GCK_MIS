@model MeherEstateDevelopers.Models.Sp_Get_Deal_Parameter_Result

@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}

<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Dealer Detais</h6>
            <div class="mT-30">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label>Dealer</label>
                        <input type="text" class="form-control" value="@Model.Dealer_Name" readonly />
                    </div>
                    <div class="form-group col-md-2">
                        <label>Block</label>
                        <input type="text" class="form-control" value="@Model.Block_Name" readonly />
                    </div>
                    <div class="form-group col-md-2">
                        <label>Amount</label>
                        <input type="text" class="form-control" value="@string.Format("{0:n0}",Model.Deal_Total_Amount)" readonly />
                    </div>
                    <div class="form-group col-md-2">
                        <label>Deposit</label>
                        <input type="text" class="form-control" value="@string.Format("{0:n0}",Model.Deposit)" readonly />
                    </div>
                    <div class="form-group col-md-2">
                        <label>Advance</label>
                        <input type="text" class="form-control" value="@Model.Advance %" readonly />
                    </div>
                    <div class="form-group  col-md-2">
                        <label>Rebate</label>
                        <input type="text" class="form-control" value="@Model.Rebate %" readonly />
                    </div>
                </div>
                <div id="full_deal">

                </div>
            </div>
            <hr />
            <div class="row" id="re-fi-for">
            </div>
        </div>
    </div>
</div>


<script>
    $('#full_deal').load('/Dealership/FullDeal/', { Id: @Model.Id })
</script>