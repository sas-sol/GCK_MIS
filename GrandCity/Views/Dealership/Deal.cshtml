@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }

}
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Create Deal</h6>
            <div class="mT-30">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label>Project</label>
                        @Html.DropDownList("Projects", null, "Select Project", htmlAttributes: new { @class = "form-control prj-phas" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Phases</label>
                        <select class="form-control pha-blk" name="Phase" id="phase">
                            <option>Select Project</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label>Block</label>
                        <select class="form-control pha-blk" name="Block" id="block">
                            <option>Select Phase</option>
                        </select>
                    </div>
                    <div class="form-group  col-md-3">
                        <label>Dealership</label>
                        @Html.DropDownList("Dealership", null, "Select Dealership", htmlAttributes: new { @class = "form-control dealership" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label>Deal Total Amount</label>
                        <input type="text" class="form-control deal_amt" readonly />
                    </div>
                    <div class="form-group col-md-1">
                        <label>Advance</label>
                        <input type="text" class="form-control" placeholder="%" id="advance" />
                    </div>
                    <div class="form-group col-md-1">
                        <label>Rebate</label>
                        <input type="text" class="form-control" placeholder="%" id="rebate" />
                    </div>
                </div>

            </div>
            <hr />
            @*Create Plan of Full deal*@
            <h6 class="c-grey-900">Create Plan</h6>
            <hr />
            <div class="col-md-12 " id="ad-pln-altmnt">
                <input type="hidden" value="" id="dea-adv" />
                <div class="row" style="margin-left:18%">
                    <h5>Rate/Marla</h5>  &nbsp;&nbsp;: &nbsp;&nbsp;&nbsp;
                    <input class="form-control coma rat-per-mar" placeholder="12,345" required style="width:50%">
                    <input type="hidden" id="rat-per-mar" name="Amount" class="amt" required>
                </div>
                <hr />
                <div class="form-row cal" id="add-pln-1">
                    <h6 class="lh-1 mB-0 pln-counter">1.</h6>
                    <div class="form-group col-md-2">
                        <label>Plot Size</label>
                        <select class="form-control plt_ch" id="plot_size" data-id="1">
                            <option value="">Choose..</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label># Of Files</label>
                        <input type="text" class="form-control mrls_cal" name="plot_num" id="plot_num" data-id="1">
                    </div>
                    <div class="form-group col-md-2">
                        <label>Marlas</label>
                        <input type="text" class="form-control marlas-cal" name="Marlas" id="" data-id="1" readonly>
                    </div>
                    <i class="ti-plus pointer alt-pln"></i>
                </div>
            </div>
            <hr />
            <div>
                <label>Total Files :&nbsp;&nbsp;&nbsp;&nbsp; <label id="tot_files"></label></label>
                <input type="hidden" id="tot_files_1" />
                <label>&nbsp;&nbsp;&nbsp;&nbsp;Total Marlas :&nbsp;&nbsp;&nbsp;&nbsp; <label id="tot_marla_amt"></label></label>
                <input type="hidden" id="tot_marla_amt_1" />
                <label>&nbsp;&nbsp;&nbsp;&nbsp;Total Price :&nbsp;&nbsp;&nbsp;&nbsp; <label id="tot_marla_price"></label></label>
                <input type="hidden" id="tot_marla_price_1" />
                <label>&nbsp;&nbsp;&nbsp;&nbsp;Pending Deposit :&nbsp;&nbsp;&nbsp;&nbsp; <label id="dea_dep_amt"></label></label>
                <input type="hidden" id="dea_dep_amt_1" />
            </div>
            <hr />
            @*<button type="button" id="gen-de-pln" value="@ViewBag.DealId" class="btn btn-info" style="float:right">Generate Plan</button>*@
            <button type="submit" class="btn btn-primary" id="dealer-deal">Add Deal</button>

        </div>
    </div>
</div>


