@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_FileAppForms_Result>
@using MeherEstateDevelopers.Models;
@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Files Generated For Dealers</h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <td>Plot Size</td>
                    <td>Total Files</td>
                    <td>Dealership</td>
                    <td>Rate</td>
                    <td>Development Charges</td>
                    <td>Generated By</td>
                    <td>Created Date</td>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            string devcharges = (item.Development_Charges) ? "With Development Charges" : "Non Development Charges";
                            <tr class="pointer gene-files-detail" id="@item.Group_Id">
                                <td>@srcounter</td>
                                <td>@item.Plot_Size Marla</td>
                                <td>@item.Total_Files</td>
                                <td>@item.Dealership_Name</td>
                                <td>@string.Format("{0:n0}", item.Grand_Total)</td>
                                <td>@devcharges</td>
                                <td>@item.Name</td>
                                <td>@string.Format("{0:D}", item.Created_Date)</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
