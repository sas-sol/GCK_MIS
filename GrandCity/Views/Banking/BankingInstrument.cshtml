@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="bgc-white bd bdrs-3 p-20 mB-20">
    <div class="row">
        <div class="col-md-12">
            <h4 style="text-align:center">All Banking Instruments</h4>
        </div>
    </div>
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light navforcolor bgc-white" style="width: 100%;overflow: auto;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav nav-fill w-100">
                    <a href="#" style="min-width:10%; margin: 0 1%" class="nav-item nav-link navproject rec-inst currentclass ">Receivable</a>
                    <a href="#" style="min-width:10%; margin: 0 1%" class="nav-item nav-link pay-inst navproject">Payables</a>
                </div>
            </div>
        </nav>
    </div>
    <div class=" mt-2 bgc-white" id="dep-inv">

    </div>
</div>
<script>
    $(".navproject").click(function () {
        var list = $(".navproject")
        $(this).css("background-color", "ghostwhite");
        $(".currentclass").css("background-color", "white");
        $(".currentclass").removeClass("currentclass");
        $(this).addClass('currentclass');
    });

    $(document).on("click", ".rec-inst", function () {
        SASLoad($("#dep-inv"));
        $('#dep-inv').load('/Banking/AllBankPayments/', function () {
            SASUnLoad($("#dep-inv"));
        });
    });
    $(document).on("click", ".pay-inst", function () {
        SASLoad($("#dep-inv"));
        $('#dep-inv').load('/Banking/InstrumentClearing/', function () {
            SASUnLoad($("#dep-inv"));
        });
    });
</script>
