@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_ChDDPO_Result>
<div class="form-row bgc-white">
    <div class="col-md-2">
        <div class="scrollable bd  pos-r bdT layer w-100 fxg-1">
            <ul class="p-20 nav flex-column">
                <li class="nav-item">
                    <a href="javascript:void(0)" data-link="/Banking/PDCCheques?Status=@ViewBag.Status" class="nav-link cH-blue-500 active chddpo-link">
                        <div class="peers ai-c jc-sb">
                            <div class="peer peer-greed">
                                <span>Cheques</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="javascript:void(0)" data-link="/Banking/PDCBankDrafts?Status=@ViewBag.Status" class="nav-link cH-blue-500 chddpo-link">
                        <div class="peers ai-c jc-sb">
                            <div class="peer peer-greed">
                                <span>BankDrafts</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="javascript:void(0)" data-link="/Banking/PDCPayorder?Status=@ViewBag.Status" class="nav-link cH-blue-500 chddpo-link">
                        <div class="peers ai-c jc-sb">
                            <div class="peer peer-greed">
                                <span>Payorder</span>
                            </div>
                        </div>
                    </a>
                </li>
                @*<li class="nav-item">
                    <a href="javascript:void(0)" data-link="/Banking/PDCOnline?Status=@ViewBag.Status" class="nav-link cH-blue-500 chddpo-link">
                        <div class="peers ai-c jc-sb">
                            <div class="peer peer-greed">
                                <span>Online</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="javascript:void(0)" data-link="/Banking/PDCDebitCredit?Status=@ViewBag.Status" class="nav-link c-grey-800 cH-blue-500 chddpo-link">
                        <div class="peers ai-c jc-sb">
                            <div class="peer peer-greed">
                                <span>Debit/Credit Card</span>
                            </div>
                        </div>
                    </a>
                </li>*@
            </ul>
        </div>
    </div>
    <div class="col-md-10 ">
        <div class=" bd bdrs-3 p-20 mB-20">
            <h4 class=" mB-20">Cheques</h4>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Start Date</label>
                    <input type="text" class="form-control" data-provide="datepicker" id="startdate" placeholder="mm/dd/yyyy">
                </div>
                <div class="form-group col-md-3">
                    <label>End Date</label>
                    <input type="text" class="form-control" data-provide="datepicker" id="enddate" placeholder="mm/dd/yyyy">
                </div>
                <div class="form-group col-md-3">
                    <button style="margin-top:29px" data-type="Cheque" class="btn btn-primary pdc-inst-search" data-stat="@ViewBag.Status">Search</button>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <h3>@string.Format("{0: dd-MMMM-yyyy}", ViewBag.From)</h3>
                </div>
                <div class="form-group col-md-4">
                    <h3>@string.Format("{0: dd-MMMM-yyyy}", ViewBag.To)</h3>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="mytable" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Cheque No.</th>
                            <th>Date</th>
                            <th>Bank</th>
                            <th>Acc. No</th>
                            <th>Amount</th>
                            <th>Module - Type</th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Any())
                            {
                                foreach (var g in Model.GroupBy(x => new { x.Cheque_BankDraft_Payorder_Number, x.Bank, x.Cheque_DemandDraft_PayOrder_Date, x.Status, x.Deposit_Bank, x.Deposit_Bank_Acc_Number, x.Posted_Date }))
                                {
                                    string statuscolor = "";
                                    if (g.Key.Status == "Approved") { statuscolor = "bgc-green-50"; }
                                    else if (g.Key.Status == "Dishonored")
                                    {
                                        statuscolor = "bgc-red-50";
                                        <script>
                                            $("tr").removeClass("cbp-details");
                                            $("tr").removeAttr("data-toggle");
                                            $("tr").removeAttr("data-target");
                                        </script>
                                    }

                                    <tr class="@statuscolor">
                                        <td>@g.Key.Cheque_BankDraft_Payorder_Number</td>
                                        <td>@string.Format("{0:D}", g.Key.Cheque_DemandDraft_PayOrder_Date)</td>
                                        <td>@g.Key.Bank</td>
                                        <td>@g.Key.Deposit_Bank_Acc_Number</td>
                                        <td>@string.Format("{0:n0}", g.Sum(x => x.Amount))</td>
                                        <td>
                                            @foreach (var item in g)
                                            {
                                                var data = item.File_No + " - " + item.Module + " - " + item.Type;
                                                <span>@data</span><br />
                                            }
                                        </td>
                                        @if (g.Key.Status == "Dishonored")
                                        {
                                            <td>
                                                @g.Select(x => x.Dishonored_Reason).FirstOrDefault()
                                            </td>
                                        }
                                        <td>
                                            <span class="fa fa-eye pointer cbpimage" id="@g.Key.Cheque_BankDraft_Payorder_Number`@string.Format("{0:d_M_yyyy}",g.Key.Cheque_DemandDraft_PayOrder_Date)`@g.Key.Bank`@g.Key.Status" data-toggle="modal" data-target="#Modal"></span> | <span class="@statuscolor fa fa-pencil pointer cbp-details-pdc" id="@g.Key.Cheque_BankDraft_Payorder_Number`@g.Key.Cheque_DemandDraft_PayOrder_Date`@g.Key.Bank`@g.Key.Status" data-toggle="modal" data-target="#Modal"></span>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#mytable').DataTable();
    });
</script>
@if (User.IsInRole("ReadOnly"))
{
    <script>
        $('.cbp-details').removeClass('cbp-details');
    </script>
}