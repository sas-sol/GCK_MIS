@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="bdrs-3 ov-h bgc-white p-10 bd">
            <div class="form-row">
                <h5>Online Bank Reconciliation</h5>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label>From</label>
                    <input type="text" id="from" class="form-control" data-provide="datepicker" />
                </div>
                <div class="form-group col-md-2">
                    <label>To</label>
                    <input type="text" id="to" class="form-control" data-provide="datepicker" />
                </div>
                <div class="form-group col-md-2">
                    <label>Bank</label>
                    <select class="form-control" id="bank">
                        <option>Choose..</option>
                        <option value="DIB">Dubai Islamic Bank</option>
                        <option value="HBL">Habib Bank Limited</option>
                        <option value="Debit/Credit Card">Debit/Credit Card</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <button class="btn btn-info rec-sea-res-bkmis" style="margin-top:29px">Search</button>
                </div>
            </div>
            <div class="form-row">
                <div class="table-responsive" id="report">
                    @{ Html.RenderAction("Search_BanksMIS", "Banking", new { From = DateTime.Now, To = DateTime.Now });}
                </div>
            </div>
        </div>
    </div>
</div>