@model MeherEstateDevelopers.Models.Sp_Get_AllotmentLetter_Result
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        body {
            font-family: Roboto,-apple-system,system-ui,BlinkMacSystemFont,Segoe UI,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,Arial,sans-serif;
        }

        @@page {
            size: legal;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        @@media all {
            body {
                -webkit-print-color-adjust: exact;
            }

            .watermark {
                background-image: url(/images/watermark.jpg);
                background-repeat: no-repeat;
                background-size: 100%;
                background-position: 50% 50%;
                width: 1000px;
                position: absolute;
                height: 800px;
                opacity: 0.1;
                margin-top: 32%;
            }
        }
    </style>
</head>
<body>
    <div class="watermark"></div>
    <table cellspacing="0" border="0" style="width:1000px">
        <tr>
            <td width="200px" align="center" valign=bottom style="font-weight:bold"><img src="~/assets/static/images/sag scheme logo.jpg" width=160 height=110></td>
            <td width="650px" align="right" valign="top" style="font-weight:bold">
                <table style="margin-top:1px;font-size:20px">
                    <tbody>
                        <tr><td align="right" valign="top">ORIGINAL</td></tr>
                        <tr><td align="right" valign="top">Ref No: @Model.Ref_No</td></tr>
                        <tr><td align="right" valign="top">@string.Format("{0:MMMM dd, yyyy}", DateTime.Now) </td></tr>
                    </tbody>
                </table>
            </td>
            @{
                string img = "";
                string plt = Model.Plot_No.Replace(" ", "_");
                var name = Model.Name.Replace("/", "-");
                img = Model.Phase + "_" + Model.Plot_No + "_" + name + ".png";
            }
            <td width="150px" align="center" valign=bottom style="font-weight:bold"><img src="~/QR Codes/@img" width=120 height=125></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px">
        <tr style="background-color: red;color: white;">
            <td width="1000px" align="center" style="padding:11px" valign=bottom><font size="6"><b>Public Use</b></font></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 21px;margin-top: 7px;">
            <tr>
                <td width="800px" valign="top">
                    <table style="margin-top:10px">
                        <tbody>
                        </tbody>
                    </table>
                    <table style="margin-top:20px">
                        <tbody>
                            <tr>
                                <td align="left" valign="bottom" style="line-height:40px">
                                    Plot alloted to&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>@Model.Name</b>&nbsp;&nbsp;&nbsp;</u>
                                    &nbsp;Through&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>@Model.Father_Name</b>&nbsp;&nbsp;&nbsp;</u>
                                    S/O&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>Sher Azam Malik</b>&nbsp;&nbsp;&nbsp;</u>
                                    &nbsp;
                                    &nbsp;CNIC<u>&nbsp;&nbsp;&nbsp;<b>&nbsp;@Model.CNIC&nbsp;</b>&nbsp;&nbsp;&nbsp;</u>&nbsp;
                                    Address&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>@Model.Address</b>&nbsp;&nbsp;&nbsp;</u>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 20px;margin-top:15px">
        <tr>
            <td width="70px" align="left" valign="middle" style="font-weight:bold"><img width="45" height="40" src="~/assets/static/images/twoarrows.png" /></td>
            <td width="930px" align="left" valign="middle" style="font-weight:bold">Allotment Details</td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 20px;margin-top:15px">
        <tr>
            <td width="75px" align="left" valign=bottom>Location</td>
            <td width="330px" align="center" valign=bottom style="border-bottom:1px solid"><b>@Model.Plot_No</b></td>
            <td width="70px" align="center" valign=bottom>Block</td>
            <td width="130px" align="center" valign=bottom style="border-bottom:1px solid"><b>@Model.Block</b></td>
            <td width="90px" align="center" valign=bottom>Category</td>
            <td width="250px" align="center" valign=bottom style="border-bottom:1px solid"><b>@Model.Plot_Size @Model.Plot_Type</b></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 20px;margin-top: 35px;">
        <tr>
            <td width="50px" align="left" valign="bottom">Area</td>
            @{ string area = Model.Area.Split('.')[0]; }
            <td width="150px" align="center" valign="bottom" style="border-bottom:1px solid"><b>@area Sq-Ft</b></td>
            <td width="100px" align="left" valign="bottom">Measurements</td>
            <td width="700px" align="center" valign="bottom" style="border-bottom:1px solid"><b>@Model.Diemensions</b></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 21px;margin-top: 35px;">
        <tr>
            <td width="50px" align="left" valign="middle" style="font-weight:bold"><img width="50" src="~/assets/static/images/termscond.png" /></td>
            <td width="950px" align="left" valign="middle"><b>Terms & Conditions</b></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 11.5pt;">
        <tr>
            <td width="1000px" align="left" valign=bottom>
                <ol>
                    <li>The plot shall be used for the sole purpose for use of Public.</li>
                    <li>All the bye-laws, rules and regulations of the Meher Estate Developers Housing Scheme are applicable in full letter and spirit.</li>
                    <li>Area will be used in the best interest of Public and according to the Rules Only Approved by TMA/LDA</li>
                </ol>
            </td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;font-size: 11.5pt;margin-top:10px">
        <tr>
            <td width="1000px" align="left" valign=bottom><b>Ensuring our best co-operation at all times,</b></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:15px;font-size:21px">
        <tr>
            <td width="50px" align="left" valign="middle" style="font-weight:bold"><img width="30" src="~/assets/static/images/hands.png" /></td>
            <td width="950px" align="left" valign="middle"><b>Memorandum of Acceptance</b></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:15px;font-size:21px">
        <tbody>
            <tr>
                <td width="10px" align="left" valign="bottom" style="line-height:40px">
                    I&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>Shoaib Afzal Malik</b>&nbsp;&nbsp;&nbsp;</u>
                    &nbsp;S/O, D/O, W/O&nbsp;&nbsp;<u>&nbsp;&nbsp;&nbsp;<b>Sher Azam Malik</b>&nbsp;&nbsp;&nbsp;</u>&nbsp;
                    do Hereby accept the allotment with conditions embodied in the above allotment letter
                </td>
            </tr>
        </tbody>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:120px">
        <tr>
            <td width="300px" align="left" valign=bottom>
                <table>
                    <tbody>
                        <tr><td><b><font size="4">@Model.Witness1</font></b></td></tr>
                        <tr><td>Witness</td></tr>
                    </tbody>
                </table>
            </td>
            <td width="300px" align="left" valign=bottom>
                <table>
                    <tbody>
                        <tr><td><b><font size="4">@Model.Witness2</font></b></td></tr>
                        <tr><td>Witness</td></tr>
                    </tbody>
                </table>
            </td>
            <td width="50px" align="center" valign=bottom style="border-right:1px solid #ccc"></td>
            <td width="350px" align="center" valign=bottom>
                <table>
                    <tbody>
                        <tr><td><b><font size="4">Shoaib Afzal Malik</font></b></td></tr>
                        <tr><td>Owner</td></tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:20px;border-top:1px solid #ccc">
        <tr>
            <td align="left" valign=bottom></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:80px;font-size:21px">
        <tr>
            <td width="500px" align="center" valign=bottom></td>
            <td width="300px" align="center" valign=bottom style="border-left:1px solid #ccc">
                <table>
                    <tbody>
                        <tr><td><b>@Model.Head_Name</b></td></tr>
                        <tr><td align="left" style="color:red">@Model.Designation</td></tr>
                    </tbody>
                </table>
            </td>
            <td width="200px" align="center" valign=bottom></td>
        </tr>
    </table>
    <table cellspacing="0" border="0" style="width:1000px;margin-top:55px;font-size:22px">
        <tr>
            <td width="500px" align="left" valign="middle">
                <table>
                    <tbody>
                        <tr><td><b>TMA APPROVED</b></td></tr>
                        <tr><td><b>REF NO. </b></td></tr>
                    </tbody>
                </table>
            </td>
            <td width="500px" align="right" valign=bottom>
                <img src="~/assets/static/images/whitesaprj.png" width=185 height=100>
            </td>

        </tr>
    </table>
</body>
</html>