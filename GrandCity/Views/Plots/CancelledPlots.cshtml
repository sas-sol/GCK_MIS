<h4>First Warning Files</h4>
@model IEnumerable<MeherEstateDevelopers.Models.OverdueQualifying_Plots>

<table class="table table-striped table-bordered" id="ovde" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Sr.</th>
            <th>Name</th>
            <th>Plot Number</th>
            <th>Block</th>
            <th>Plot Size</th>
            <th>Overdue Amount</th>
            <th>Mobile 1</th>
            <th>Verification</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                int dealercounter = 1;
                foreach (var item in Model)
                {
                    <tr class="pointer file-folo-det" id="@item.Id">
                        <td>@dealercounter</td>
                        <td class="name">@item.Name @*<i style="float:right; z-index:1111111" class="ti-info-alt cust-info" data-toggle="modal" data-target="#Modal"></i>*@</td>
                        <td class="file-num">@item.Plot_No</td>
                        <td class="file-num">@item.Block_Name</td>
                        <td>@item.Plot_Size</td>
                        <td>@string.Format("{0:n0}", item.OverDueAmount)</td>
                        <td>@item.Mobile_1</td>
                        <td>
                            @{
                                if (item.Verified == true)
                                {
                                    <button class="btn btn-primary fir-war-p" data-id="@item.Id" data-ownid="@item.Owner_Id" style="font-size:13px;padding: 3px;">Warning Letter</button>
                                }
                                else
                                {
                                    if (item.Verification_Req == true)
                                    {
                                        <label class="switch" style="height:20px;width:46px;margin:0px"><input type="checkbox" data-id="@item.Id" id="veri-req-id" checked><span class="slider round"></span></label>
                                    }
                                    else
                                    {
                                        <label class="switch" style="height:20px;width:46px;margin:0px"><input type="checkbox" data-id="@item.Id" id="veri-req-id"><span class="slider round"></span></label>
                                    }
                                }
                            }

                        </td>
                    </tr>
                    dealercounter++;
                }
            }
        }
    </tbody>
</table>
<style>
    table tr th, table tr td {
        padding: 5px !important;
        font-size: 12px;
    }

    .slider:before {
        height: 13px !important;
        width: 13px !important;
    }
</style>