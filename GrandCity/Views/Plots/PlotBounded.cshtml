@model MeherEstateDevelopers.Models.LatestPlotDetailData
<table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Position</th>
            <th>Plot Number</th>
            <th>Block</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (!Model.PlotBounding.Any())
            {
                <tr><td colspan="7" style="text-align:center">No data available</td></tr>
            }
            else
            {
                foreach (var item in Model.PlotBounding)
                {
                    <tr class="" id="@item.Id">
                        <td>@item.Position</td>
                        <td>@item.Bonded_Plot_Number</td>
                        <td>@item.Block_Name</td>
                        <td>@item.Plot_Type</td>
                        <td><i class="pointer ti-trash del__bounding" data-id="@item.Id"></i></td>
                    </tr>
                }
            }
        }
    </tbody>
</table>