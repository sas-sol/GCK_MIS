@using (Html.BeginForm("PlotUpStatus1", "Plots", FormMethod.Post, new { @id = "up-plot-stat", @class = "", role = "form", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="PlotId" value="@ViewBag.PlotId" id="Plotid" />
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Current Plot Status</label>
            @{ string stat = ViewBag.Status.ToString().Replace('_', ' ');}
            <h5>@stat</h5>
        </div>
        <div class="form-group col-md-3">
            <label>New Status</label>
            <select class="form-control" name="PlotStatus">
                <option value="Temporary_Cancelled">Temporary_Cancelled</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Registered">Registered</option>
                <option value="Disputed">Disputed</option>
                <option value="Available_For_Sale">Available_For_Sale</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Repurchased">Repurchased</option>
                <option value="Hold">Hold</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>Reason</label>
            <textarea class="form-control" name="Remarks" required></textarea>
        </div>
    </div>
}
<script>
    $(function () {
        $('.modal-footer').append('<button class="btn btn-primary" id="up-plt-stat" type="button">Update</button>');
    });
</script>