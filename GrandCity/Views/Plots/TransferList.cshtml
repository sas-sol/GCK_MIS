@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_TransferList_Plot_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">@ViewBag.Title</h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Plot No</th>
                    <th>Block</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Size</th>
                    <th>Name</th>
                    <th>Receipt No</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        foreach (var item in Model.OrderBy(x => x.Block_Name))
                        {
                            <tr class="pointer plot-det" id="@item.Id">
                                <td>@item.Plot_Number</td>
                                <td>@item.Block_Name</td>
                                <td>@item.Type</td>
                                <td>@string.Format("{0:dd MMM yyyy}", item.DateTime)</td>
                                <td>@item.Plot_Size</td>
                                <td>@item.From_Name</td>
                                <td>@item.ReceiptNo</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
