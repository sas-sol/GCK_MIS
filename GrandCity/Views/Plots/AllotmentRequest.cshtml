@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_AllotmentLetterRequests_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Allotment Letter Request</h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <td>Plot No</td>
                    <td>Block</td>
                    <td>Size</td>
                    <td>Name</td>
                    <td>Father Name</td>
                    <td>CNIC</td>
                    <td>Type</td>
                    <td>Location</td>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            <tr class="pointer plot-all-det" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.Plot_No</td>
                                <td>@item.Block_Name</td>
                                <td>@item.Plot_Size</td>
                                <td>@item.Name</td>
                                <td>@item.Father_Husband</td>
                                <td>@item.CNIC_NICOP</td>
                                <td>@item.Type</td>
                                <td>@item.Plot_Location</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
