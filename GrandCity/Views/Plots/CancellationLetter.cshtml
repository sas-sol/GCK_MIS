@model MeherEstateDevelopers.Models.OverdueQualifying_Plots
@*<p><span style="font-family: 'Abadi',sans-serif;">&nbsp;</span></p>
    <p><span style="font-family: 'Abadi',sans-serif;">&nbsp;</span></p>
    <p><span style="font-family: 'Abadi',sans-serif;">&nbsp;</span></p>
