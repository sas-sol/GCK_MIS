        var type = $(this).val();
        if (type == null || type == '')
        {
            alert('Select type');
            return false;
        }
        var con = confirm("Are you sure you want to Move this Letter");
        if (con) {
            $.ajax({
                type: "POST",
                url: '/Plots/WarningIssuesPlotsMove/',
                data: { Id: id, OwnerId: ownid, Type: type },
                success: function (data) {
                    $('#over').load('/Plots/QualifyingPlots/');
