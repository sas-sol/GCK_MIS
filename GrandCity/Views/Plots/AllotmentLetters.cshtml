@model IEnumerable<MeherEstateDevelopers.Models.AllotmentLetter>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class="col-md-12">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Allotment Letter Generated Lists</h4>
        <table id="gen-all" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Plot No</th>
                    <th>Block</th>
                    <th>Type</th>
                    <th>Size</th>
                    <th>Name</th>
                    <th>Father Name</th>
                    <th>Signed</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="pointer" id="@item.Id">
                                <td>@item.Plot_No</td>
                                <td>@item.Block</td>
                                <td>@item.Plot_Type</td>
                                <td>@item.Plot_Size</td>
                                <td>@item.Name</td>
                                <td>@item.Father_Name</td>
                                @{
                                    if (item.Signed == true)
                                    {
                                        <td>Signed</td>
                                    }
                                    else
                                    {
                                        <td>-</td>

                                    }
                                }
                                <td>@string.Format("{0:D}", item.Datetime)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#gen-all').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "aoColumnDefs": [{ "bSortable": false, "aTargets": [0, 1, 2, 3, 4, 5, 6, 7] }],
            "ordering": false
        });
    });
</script>