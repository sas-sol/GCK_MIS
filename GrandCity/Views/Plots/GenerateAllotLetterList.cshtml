@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_VerifiedforAllotmentLetters_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Generate New Allotment Letters</h4>
        <table id="gen-all" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.</th>
                    <th>Block</th>
                    <th>Sector</th>
                    <th>Plot No</th>
                    <th>Plot Size</th>
                    <th>Name</th>
                    <th>Father Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            <tr class="pointer allotment-let" data-toggle="modal" data-target="#Modal" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.Block_Name</td>
                                <td>@item.Sector</td>
                                <td>@item.Plot_Number</td>
                                <td>@item.Plot_Size</td>
                                <td>@item.Name</td>
                                <td>@item.Father_Husband</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#gen-all').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>