@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_HODTickets_Result>
<div class="col-md-12">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>Sr.</th>
                <th>Ticket No</th>
                <th>Department</th>
                <th>Title</th>
                <th>Description</th>
                <th>Assigned To</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @{

                int sr = 1;
                foreach (var item in Model)
                {
                    string col = "";
                    if (item.Status == "Resolved")
                    {
                        col = "bgc-green-50";
                    }
                    <tr class="pointer t-det @col" id="@item.Id">
                        <td>@sr</td>
                        <td>@item.Ticket_No</td>
                        <td>@item.Department</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Assigned_To</td>
                        <td>@item.Status</td>
                        <td>@string.Format("{0:MM/dd/yyyy}", item.Datetime)</td>
                    </tr>
                    sr++;
                }

            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        var groupColumn = 2;
        var table = $('#example').DataTable({
            dom: 'Bfrtip',
            "columnDefs": [
                { "visible": false, "targets": groupColumn }
            ],
            "order": [[groupColumn, 'asc']],
            "displayLength": 25,
            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;

                api.column(groupColumn, { page: 'current' }).data().each(function (group, i) {
                    if (last !== group) {
                        var myArray = [ 'bgc-purple-50', 'bgc-blue-50', 'bgc-yellow-50'];
                        var rand = myArray[Math.floor(Math.random() * myArray.length)];

                        $(rows).eq(i).before(
                            '<tr class="group ' + rand +'"><td colspan="8" style="text-align:center" ><b>' + group + '</b></td></tr>'
                        );
                        last = group;
                    }
                });
            }
        });
        // Order by the grouping
        $('#example tbody').on('click', 'tr.group', function () {
            var currentOrder = table.order()[0];
            if (currentOrder[0] === groupColumn && currentOrder[1] === 'asc') {
                table.order([groupColumn, 'desc']).draw();
            }
            else {
                table.order([groupColumn, 'asc']).draw();
            }
        });
    });

</script>