@model MeherEstateDevelopers.Models.Ticket
@using (Html.BeginForm("CreateTicket", "Tickets", FormMethod.Post, new { @id = "c-tik", @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="Department" id="dep-nam" />
    <div class="row">
        <div class="form-group col-md-5">
            <label>Department</label>
            @Html.DropDownList("Department", null, "Choose..", new { Name = "Dep_Id", @class = "form-control dep-user" })
        </div>
        <div class="form-group col-md-5">
            <label>Subject</label>
            <input class="form-control" id="title" name="Title" />
        </div>
        <div class="form-group col-md-5">
            <label>Assigned To</label>
            <select class="form-control" id="AssignedTo" name="AssignedTo"></select>
            <label>Deadline</label>
            <input class="form-control" id="Deadline" data-provide="datepicker" name="Deadline" />
        </div>
        <div class="form-group col-md-7">
            <label>Description</label>
            <textarea class="form-control" name="Description" rows="4"></textarea>
        </div>
        <div class="form-row p-20 ">
            <div class="form-group col-md-3" style="margin-top:10px;">
                <label>Attachments</label>
                <input type="file" id="quote-file" multiple />
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h3>Ticket No: <span id="tick-no"><b></b></span></h3>
        </div>
    </div>
}
<script>
    $(function () {
        $('.modal-footer').append('<button class="btn btn-primary" id="c-tick-btn" type="button">Create Ticket</button>');
    });

</script>