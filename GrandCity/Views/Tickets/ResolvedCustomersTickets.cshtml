@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Tickets_Customer_Result>
<div class="bgc-white bd bdrs-3 p-20 mB-20">
    <h5>Resolved Tickets</h5>
    <div class="col-md-12">
        <table id="ticks" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.</th>
                    <th>Ticket No</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Assigned To</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{

                    int sr = 1;
                    foreach (var item in Model)
                    {
                        string col = "";
                        if (item.Status == "Resolved")
                        {
                            col = "bgc-green-50";
                        }
                        <tr class="pointer t-det @col" id="@item.Id">
                            <td>@sr</td>
                            <td>@item.Ticket_No</td>
                            <td>@item.Name</td>
                            <td>@item.Mobile_No</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Assigned_To</td>
                            <td>@item.Status</td>
                            <td>@string.Format("{0:MM/dd/yyyy}", item.Datetime)</td>
                        </tr>
                        sr++;
                    }

                }
            </tbody>
        </table>
    </div>
</div>
    <script>
        $(document).ready(function () {
            $('#ticks').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });

    </script>
