@model MeherEstateDevelopers.Models.DailyCashRep
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script>
    $(document).ready(function () {
        $('.dep').multiselect();
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="bdrs-3 ov-h bgc-white p-10 bd">
            <div class="form-row">
                <div class="col-md-6">
                    <h5>Tickets Management System</h5>
                </div>
            </div>
            @if (User.IsInRole("Head of Department"))
            {
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label>From</label>
                        <input type="text" id="from" class="form-control" data-provide="datepicker" />
                    </div>
                    <div class="form-group col-md-2">
                        <label>To</label>
                        <input type="text" id="to" class="form-control" data-provide="datepicker" />
                    </div>
                    <div class="form-group col-md-3">
                        <label style="width:100%">Users</label>
                        @Html.DropDownList("Users", null, "Select Employee", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-3">
                        <button class="btn btn-info tik-sea-res-use" style="margin-top:29px">Search</button>
                    </div>
                </div>
                <div class="row" id="tick-rep">
                    <div class="col-md-12">
                        @{ Html.RenderAction("HODTicketStatus", "Reports");}
                    </div>
                </div>
                <div class="row" id="report">
                    @{ Html.RenderAction("HODSearchTicket", "Tickets");}
                </div>
            }
            else
            {
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label>From</label>
                        <input type="text" id="from" class="form-control" data-provide="datepicker" />
                    </div>
                    <div class="form-group col-md-2">
                        <label>To</label>
                        <input type="text" id="to" class="form-control" data-provide="datepicker" />
                    </div>
                    <div class="form-group col-md-3">
                        <label></label>
                        <button class="btn btn-info tik-my-sea-res" style="margin-top:29px">Search</button>
                    </div>
                </div>
                <div class="row" id="tick-rep">
                    <div class="col-md-12">
                        @{ Html.RenderAction("MyTicketStatus", "Reports");}
                    </div>
                </div>
                <div class="row" id="report">
                    @{ Html.RenderAction("SearchMyTicket", "Tickets");}
                </div>
            }

        </div>
    </div>
</div>