@model  MeherEstateDevelopers.Models.MyTickets
<div class="col-md-12">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item"><a class="nav-link active" role="tab" data-toggle="tab" data-lead="1" aria-controls="home" aria-selected="true" href="#assigned">Assigned Tickets</a></li>
        <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" data-lead="1" aria-controls="home" aria-selected="true" href="#created">Created Tickets</a></li>
    </ul>
    <div class="tab-content">
        <div id="assigned" class="tab-pane active">
            <div class="p-20">
                <table class="ticks table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Sr.</th>
                            <th>Ticket No</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Assigned By</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{

                            int sr = 1;
                            foreach (var item in Model.AssignedTickets)
                            {
                                string col = "";
                                if (item.Status == "Resolved")
                                {
                                    col = "bgc-green-50";
                                }
                                <tr class="pointer t-det @col" id="@item.Id">
                                    <td>@sr</td>
                                    <td>@item.Ticket_No</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Assigned_To</td>
                                    <td>@item.Status</td>
                                    <td>@string.Format("{0:MM/dd/yyyy}", item.Datetime)</td>
                                </tr>
                                sr++;
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="created" class="tab-pane">
            <div class="p-20">
                <table class="ticks table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Sr.</th>
                            <th>Ticket No</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Assigned To</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{

                            sr = 1;
                            foreach (var item in Model.CreateTickets)
                            {
                                string col = "";
                                if (item.Status == "Resolved")
                                {
                                    col = "bgc-green-50";
                                }
                                <tr class="pointer t-det @col" id="@item.Id">
                                    <td>@sr</td>
                                    <td>@item.Ticket_No</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Assigned_To</td>
                                    <td>@item.Status</td>
                                    <td>@string.Format("{0:MM/dd/yyyy}", item.Datetime)</td>
                                </tr>
                                sr++;
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.ticks').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>