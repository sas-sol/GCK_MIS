@model MeherEstateDevelopers.Models.LoansDetails
<input type="hidden" id="loanId" value="@Model.Loan.Id">
<div class="form-row">
    <div class="form-group col-md-3">
        <label>Employee Name</label>
        <input type="text" class="form-control" name="" value="@Model.Loan.Employee_Name" readonly>
    </div>
    <div class="form-group col-md-2">
        <label>Created At</label>
        <input type="text" class="form-control" name="" value="@string.Format("{0:dd-MMM-yyyy}", Model.Loan.CreatedAt)" readonly>
    </div>
    <div class="form-group col-md-2">
        <label>Installments</label>
        <input type="text" class="form-control" name="" value="@Model.Loan.Installments" readonly>
    </div>
    <div class="form-group col-md-2">
        <label>Loan Amount</label>
        <input type="text" class="form-control" name="" value="@string.Format("{0:0,0.##}",Model.Loan.Amount)" readonly>
    </div>
    <div class="form-group col-md-6">
        <label>Reason</label>
        <input type="text" class="form-control" value="@Model.Loan.Reason" readonly>
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group col-md-12">
            <label>HR Remarks</label>
            <textarea type="text" class="form-control" id="hr-remarks" rows="2" disabled>@Model.Loan.HrRemarks</textarea>
        </div>
        <div class="form-group col-md-6">
            <h6>Status : @Model.Loan.HrApproval</h6>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group col-md-12">
            <label>Manager Remarks</label>
            <textarea type="text" class="form-control" id="mang-remarks" rows="2" disabled>@Model.Loan.ManagerRemarks</textarea>
        </div>
        <div class="form-group col-md-6">
            <h6>Status : @Model.Loan.ManagerApproval</h6>
        </div>
    </div>
</div>
<div class="form-row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Sr.</th>
                <th>Amount</th>
                <th>Month</th>
                <th>Status</th>
                <th>Paid Amount</th>
            </tr>
        </thead>
        <tbody>
            @{ int Sr = 1;}
            @foreach (var item in Model.Installments)
            {
                <tr>
                    <td>@Sr</td>
                    <td>@string.Format("{0:0,0.##}", item.Loan_Amt)</td>
                    <td>@string.Format("{0: MMM - yyyy}", item.Date)</td>
                    <td>@item.Status</td>
                    <td>@string.Format("{0:0,0.##}", item.Paid_Amt)</td>
                </tr>
                Sr++;
            }
        </tbody>
    </table>
</div>