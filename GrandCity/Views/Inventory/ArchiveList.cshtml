@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_StockoutList_Result>
<input type="hidden" value="@ViewBag.Type" id="type" />

<div class="form-row">
    <h5>@ViewBag.Type Demand Order List</h5>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label>From</label>
        @*<input type="text" id="from" class="form-control" value="@string.Format("{0:MM/dd/yyyy}",ViewBag.From)" data-provide="datepicker" />*@
        <input type="text" id="from" class="form-control" value="" data-provide="datepicker" />
    </div>
    <div class="form-group col-md-2">
        <label>To</label>
        @*<input type="text" id="to" class="form-control" value="@string.Format("{0:MM/dd/yyyy}",ViewBag.To)" data-provide="datepicker" />*@
        <input type="text" id="to" class="form-control" value="" data-provide="datepicker" />
    </div>
    <div class="form-group col-md-2">
        <button class="btn btn-info sea-do" style="margin-top:29px">Search</button>
    </div>
</div>
<table id="inv" class="table table-striped table-bordered " cellspacing="0" width="100%" style="margin-left:0%">
    <thead class="thead-dark">
        <tr>
            <th>Sr.</th>
            <th>Demand Order</th>
            <th>Requested By</th>
            <th>Project</th>
            <th>Date</th>
            <th>Requested Items</th>
            <th>Issued Items</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;
                foreach (var g in Model.GroupBy(x => new { x.Demand_Id, x.DemandOrder_No, x.Prj_Name, x.Prj_Id, x.RequestedBy_Date, x.RequestedBy_Name, x.STATUS }))
                {
                    string color = "";
                    if (g.Key.STATUS == "Approved")
                    {
                        color = "bgc-green-50";
                    }
                    <tr class="pointer  row-@i @color" id="@g.Key.Demand_Id" data-row="@i">
                        <td>@i</td>
                        <td>@g.Key.DemandOrder_No</td>
                        <td>@g.Key.RequestedBy_Name</td>
                        <td>@g.Key.Prj_Name</td>
                        <td>@string.Format("{0:dd-MMM-yyyy}", g.Key.RequestedBy_Date)</td>
                        <td>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Item Name</th>
                                        <th>UOM</th>
                                        <th>Qty</th>
                                        <th>Issue To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in g.GroupBy(x => new { x.SKU, x.Item_Name, x.UOM, x.Qty, x.IssueTo_Name }))
                                    {
                                        <tr>
                                            <td>@item.Key.SKU</td>
                                            <td>@item.Key.Item_Name</td>
                                            <td>@item.Key.UOM</td>
                                            <td>@item.Key.Qty</td>
                                            <td>@item.Key.IssueTo_Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                        <td>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Date</th>
                                        <th>Name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in g.GroupBy(x => new { x.IssueNote_No, x.IssuedBy_Date, x.Issue_Id, x.IssueBy_Name }))
                                    {
                                    <tr id="@item.Key.Issue_Id">
                                        <td>@item.Key.IssueNote_No</td>
                                        <td>@string.Format("{0:dd-MMM-yyyy hh:mm tt}", item.Key.IssuedBy_Date)</td>
                                        <td>@item.Key.IssueBy_Name</td>
                                        <td>
                                            <ul style="list-style:none;margin-left:0px;">
                                                <li class="dropdown">
                                                    <a href="" class="dropdown-toggle no-after peers" data-toggle="dropdown">
                                                        <i class="ti-more-alt  c-grey-900" style="transform:rotate(90deg);"></i>
                                                    </a>
                                                    <ul class="dropdown-menu" style="padding:10px;width:auto !important">
                                                        <li class="is-vi" id="@item.Key.Issue_Id"><i class="ti-eye"></i>&nbsp;&nbsp;View Issue Note  </li>
                                                        <li class="do-details" id="@g.Key.Demand_Id"><i class="fa fa-file-import"></i>&nbsp;&nbsp; View Demand Order</li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#inv').DataTable({
            ordering: false
        });
    });
 

</script>
