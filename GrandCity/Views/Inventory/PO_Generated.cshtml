@model IEnumerable<MeherEstateDevelopers.Models.Inventory_PurchaseOrder>
<table class="table table-bordered potbl">
    <thead class="thead-dark">
        <tr>
            <th>Department</th>
            <th>Month</th>
            <th>Po#</th>
            <th>Date</th>
            <th>Generated By</th>
            <th>Vendor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var po in Model.GroupBy(x => new { x.PO_Number, x.Dep_Name, x.DateTime, x.CreatedBy_Name, x.Vendor_Name }).OrderByDescending(x => x.Key.DateTime).ToList())
            {
                <tr>
                    <td class="pur-req-prdct-name">@po.Key.Dep_Name</td>
                    <td class="pur-req-prdct-name">@string.Format("{0:MMMM - yyyy}", po.Key.DateTime)</td>
                    <td class="pointer" data-po="@po.Key.PO_Number">@po.Key.PO_Number</td>
                    <td>@string.Format("{0:dd-MMM-yyyy}", po.Key.DateTime)</td>
                    <td>@po.Key.CreatedBy_Name</td>
                    <td>@po.Key.Vendor_Name</td>
                    <td>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Qty</th>
                                    <th>UOM</th>
                                    <th>Rate</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in po)
                                {
                                    string cl = (v.StockEntered == true) ? "bgc-green-50" : "bgc-red-50";
                                    <tr class="@cl">
                                        <td>@v.Item_Name</td>
                                        <td>@v.Qty</td>
                                        <td>@v.UOM</td>
                                        <td>@v.Purchase_Rate</td>
                                        <td>@string.Format("{0:0,0.##}", v.TotalVal)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th style="float:right;border:none">Total PO Value</th>
                                    <th>@string.Format("{0:0,0.##}", po.Sum(x => x.TotalVal))</th>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No Record Exists</td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(function () {
        $(".potbl").DataTable({
            ordering: false,
            order: [[1, 'asc'], [0, 'asc']],
            rowGroup: {
                dataSrc: [1, 0]
            },
            columnDefs: [{
                targets: [0, 1],
                visible: false
            }]
        });
    });
</script>