<script src="~/Scripts/Inv.js"></script>
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="bgc-white bd bdrs-3 p-20 mB-20">
    <div class="row">
        <div class="col-md-12">
            <h4 style="text-align:center"><u> Direct Issuance Of Items </u></h4>
        </div>
    </div>
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light navforcolor bgc-white" style="width: 100%;overflow: auto;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav nav-fill w-100">
                    <a href="#" style="min-width:10%; margin: 0 1%" class="nav-item nav-link navproject pen-po currentclass ">Pending Issuances</a>
                    <a href="#" style="min-width:10%; margin: 0 1%" class="nav-item nav-link par-po navproject">Partialy Issued</a>
                    <a href="#" style="min-width:10%; margin: 0 1%" class="nav-item nav-link com-po navproject">Completed Purchase Orders With Issuance</a>
                </div>
            </div>
        </nav>
    </div>
    <div class=" mt-2 bgc-white" id="dep-inv">

    </div>
</div>
<script>
    $(".navproject").click(function () {
        var list = $(".navproject")
        $(this).css("background-color", "ghostwhite");
        $(".currentclass").css("background-color", "white");
        $(".currentclass").removeClass("currentclass");
        $(this).addClass('currentclass');
    });

    $(document).on("click", ".pen-po", function () {
        $('#dep-inv').load('/Inventory/Pending_DirectItems/');
    });
    $(document).on("click", ".par-po", function () {
        $('#dep-inv').load('/Inventory/Partial_DirectItems/');
    });
    $(document).on("click", ".com-po", function () {
        $('#dep-inv').load('/Inventory/Completed_DirectItems/');
    });

    $(document).ready(function () {
        $(".currentclass").css("background-color", "ghostwhite");
        $('#dep-inv').load('/Inventory/Pending_DirectItems/');
        $('#inv').DataTable({
            order: [[3, 'asc'], [2, 'asc'], [1, 'asc']],
            rowGroup: {
                dataSrc: [3, 2, 1]
            },
            columnDefs: [{
                targets: [1, 2, 3],
                visible: false
            }]
            ,
            scrollY: "600px",
            scrollCollapse: true,
            paging: false
        });
    });
</script>
