@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row gap-20 masonry pos-r">
    <div class="masonry-sizer col-md-6"></div>
    <div class="masonry-item col-md-6">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Assign Role to User</h6>
            <div class="mT-30">
                @using (Html.BeginForm("AssignMISAccount", "RolesAndResponsibilities", FormMethod.Post, new { @id = "a-mis", @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label >Employee</label>
                            @Html.DropDownList("Employee", null, "Select Employee", new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label >User</label>
                            @Html.DropDownList("Users", null, "Select User", new { @class = "form-control" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Assign</button>
                }
            </div>
        </div>
    </div>
</div>