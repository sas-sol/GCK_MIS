@model MeherEstateDevelopers.Models.RealEstate_Blocks
<div class="row gap-20">
    <div class="col-md-6">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Create New Block</h6><div class="mT-30">
                @using (Html.BeginForm("Create", "RealEstateBlocks", FormMethod.Post, new { @id = "bl-c", @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group col-md-8">
                        <label>Phase</label>
                        @Html.DropDownList("Phase_Id", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-8">
                        <label>Block Name</label>
                        @Html.EditorFor(model => model.Block_Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-12">
                        <label >Description</label>
                        <textarea class="form-control" name="Description" rows="10"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Block</button>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">

    </div>
</div>