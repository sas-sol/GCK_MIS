@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_GeneralEntry_Userid_Result>
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class=" bgc-white bd bdrs-3 p-20 mB-20 row">
    <div class="col-md-12">
        <h5 style="text-align:center">My Posted Entries</h5>
    </div>
    <div class="col-md-12">
        <table id="allleads" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th width="5%" class="textcenter" >Sr.</th>
                    <th  width="60%" class="textcenter">Head</th>
                    <th  width="10%" class="textcenter">Amount</th>
                    <th  width="15%" class="textcenter">Recorded By</th>
                    <th  width="10%" class="textcenter">Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model.GroupBy(x => new { x.GroupId, x.DATE, x.Rec_Name }))
                        {
                            <tr class="pointer" id="@item.Key.GroupId">
                                <td class="textcenter">@srcounter</td>
                                <td class="vouc-det zer-pad">
                                    <table id="in-tab" width="100%">
                                        <tr>
                                            <th width="250px">Narration</th>
                                            <th width="50px">Code</th>
                                            <th width="150px">Head</th>
                                            <th width="50px">Debit</th>
                                            <th width="50px">Credit</th>
                                        </tr>
                                        @foreach (var g in item.GroupBy(x => new { x.Line, x.Naration }))
                                        {
                                            int count = 1;
                                            foreach (var gg in g)
                                            {
                                                if (count == 1)
                                                {
                                                    <tr>
                                                        <td rowspan="@g.Count()">@gg.Naration</td>
                                                        <td>@gg.Head_Code</td>
                                                        <td>@gg.Head_Name</td>
                                                        <td>@string.Format("{0:n0}", gg.Debit) </td>
                                                        <td>@string.Format("{0:n0}", gg.Credit) </td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>@gg.Head_Code</td>
                                                        <td>@gg.Head_Name</td>
                                                        <td>@string.Format("{0:n0}", gg.Debit) </td>
                                                        <td>@string.Format("{0:n0}", gg.Credit) </td>
                                                    </tr>
                                                }
                                                count++;
                                            }
                                            <tr><td colspan="4" style="padding: 0px;border: 1px solid black;"></td></tr>
                                        }
                                    </table>
                                </td>
                                <td  class="textcenter"><span class="ccy">Rs</span> @string.Format("{0:n0}", item.Sum(x => x.Credit))</td>
                                <td  class="textcenter"> @item.Key.Rec_Name</td>
                                <td  class="textcenter">@string.Format("{0:dd-MMM-yyyy}", item.Key.DATE)</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#allleads').DataTable({
            ordering: false
        });
    });
</script>
<style>
    #in-tab table, #in-tab tbody, #in-tab tr {
        background-color: transparent;
    }
</style>