@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_SAM_Voucher_Req_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class=" bgc-white bd bdrs-3 p-20 mB-20 row">
    <div class="col-md-6">
        <h4 class="c-grey-900 mB-20">Voucher Requests</h4>
    </div>
    <div class="col-md-12">
        <table id="allleads" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.</th>
                    <th>Name</th>
                    <th>No.</th>
                    <th>Block</th>
                    <th>Size</th>
                    <th>Amount</th>
                    <th>Amount In words</th>
                    <th>Requested By</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            <tr class="pointer led-vou-app" data-toggle="modal" data-target="#Modal" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.Name</td>
                                <td>@item.File_Plot_Number</td>
                                <td>@item.Block</td>
                                <td>@item.Size</td>
                                <td>@string.Format("{0:n0}", item.Amount)</td>
                                <td>@item.AmountinWords</td>
                                <td>@item.RequestedName</td>
                                <td>@string.Format("{0:MM/dd/yyyy}", item.RequestedDate)</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#allleads').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>