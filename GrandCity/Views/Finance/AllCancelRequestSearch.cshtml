@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_CancelReq_Result>
<table id="result" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="col-date">Date</th>
            <th class="col-name">Name</th>
            <th class="col-rece">Receipt No</th>
            <th class="col-file">File/Plot</th>
            <th class="col-amt">Amount</th>
            <th class="col-mod">Mode</th>
            <th class="col-type">Type</th>
            <th class="col-size">Requested By</th>
            <th class="col-deal">Reason</th>
            <th class="col-deal">Approved By</th>
            <th class="col-deal"></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                foreach (var item in Model)
                {
                    string col = "";
                    if (item.Cancel == true)
                    {
                        col = "bgc-green-50";
                    }
                    <tr class="pointer @col" id="@item.Id">
                        <td class="col-date">@string.Format("{0:MM/dd/yyyy}", item.DateTime)</td>
                        <td class="col-name">@item.Name</td>
                        <td class="col-rece">@item.ReceiptNo</td>
                        <td class="col-file">@item.File_Plot_Number</td>
                        <td class="col-amt">@string.Format("{0:n0}", item.Amount)</td>
                        <td class="col-mod">@item.PaymentType</td>
                        <td class="col-type">@item.Type</td>
                        <td class="col-size">@item.Cashier_Name</td>
                        <td class="col-deal">@Html.Raw(item.Description)</td>
                        <td class="col-deal">@item.CancelledBy</td>
                        <td class="col-deal">
                            <i class="ti-pencil can-rece-det" data-toggle="modal" data-target="#Modal" style="margin-right:15px" title="Update"></i>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10">No Record Found</td>
                </tr>
            }
        }

    </tbody>
</table>
