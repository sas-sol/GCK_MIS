@model MeherEstateDevelopers.Models.Lead
@using (Html.BeginForm("CreateUnassignedLead", "Leads", FormMethod.Post, new { @id = "c-led", @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-3">
            <label>Name</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "" } })
        </div>
        <div class="form-group col-md-3">
            <label>Father/Husband Name</label>
            @Html.EditorFor(model => model.Father_Husband, new { htmlAttributes = new { @class = "form-control", required = "" } })
        </div>
        <div class="form-group col-md-3">
            <label>Mobile</label>
            @Html.EditorFor(model => model.Mobile_1, new { htmlAttributes = new { @class = "form-control", required = "" } })
        </div>
        <div class="form-group col-md-5">
            <label>Address</label>
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <hr />
    <div class="row">

    </div>
    <div class="row">
        <div class="form-group col-md-2">
            <label>Projects</label>
            @Html.DropDownList("Project", null, "Choose..", new { @class = "form-control", required = "" })
        </div>
        <input type="hidden" value="UAN" name="Source" />
        <input type="hidden" value="Initial_Discussion" name="LeadStatus" />
    </div>
    <div class="row">
        <div class="form-group col-md-5">
            <label>Remarks</label>
            <textarea class="form-control" name="Description" rows="3" required></textarea>
        </div>
    </div>
}
<script>
    $(function () {
        $('.modal-footer').append('<button class="btn btn-primary" id="cra-un-lead" type="button">Create Lead</button>');
        $(".modal-header").text("Create Lead");
    });
</script>
<style>
    .fil, .r-plt {
        display: none;
    }
</style>