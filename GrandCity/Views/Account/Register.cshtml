@model MeherEstateDevelopers.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row gap-20 pos-r">
    <div class=" col-md-5">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Add a New User</h6><div class="mT-30">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "r-u", @class = "form-horizontal", role = "form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="RegisterResult"></div>
                    <div class="form-group">
                        <label >Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone No.</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        @Html.DropDownList("Roles", null, "Select Role", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                }
            </div>
        </div>
    </div>
</div>
