@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Project_Unassigned_Leads_Result>
@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class=" bd bdrs-3 p-20 mB-20">
    <h3 class=" mB-20" style="text-align:center;">SA Premium Homes Unassigned Leads</h3>
    <input type="hidden" id="Prj" value="@ViewBag.Project" />
    <div class="form-row">
        <div class="form-group col-md-2">
            <label>Start Date</label>
            <input type="text" class="form-control" data-provide="datepicker" id="startdate" placeholder="mm/dd/yyyy">
        </div>
        <div class="form-group col-md-2">
            <label>End Date</label>
            <input type="text" class="form-control" data-provide="datepicker" id="enddate" placeholder="mm/dd/yyyy">
        </div>
        <div class="form-group col-md-2">
            <button style="margin-top:29px" class="btn btn-primary lead-prem-uns-search">Search</button>
        </div>
        <div class="form-group col-md-4">
            <button style="margin-top:29px;float:right;" class="btn btn-info lead-prem-assign" title="Assign Leads" data-toggle="modal" data-target="#Modal">Assign Leads</button>
        </div>
        <div class="form-group col-md-2">
            <button data-toggle="modal" data-target="#Modal" style="float:right; margin-top:29px;" class="btn btn-outline-dark unassigned_lead_up"><i class="fa fa-file-excel"></i> &nbsp; Upload Leads </button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="mytable" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr No.</th>
                    <th>Name</th>
                    <th>Father's Name</th>
                    <th>Contact</th>
                    <th>Source</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sr = 1;
                    if (Model.Any())
                    {
                        foreach (var g in Model)
                        {
                            <tr data-id="@g.Id">
                                <td>@sr</td>
                                <td>@g.Name</td>
                                <td>@g.Father_Husband</td>
                                <td>@g.Mobile_1</td>
                                <td>@g.Source</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", g.Datetime)</td>
                            </tr>
                            sr++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#mytable').DataTable();
    });

</script>

