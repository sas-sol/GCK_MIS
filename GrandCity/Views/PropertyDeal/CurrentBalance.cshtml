@model List<MeherEstateDevelopers.Models.DealLedger>
@{ if (User.IsInRole("Administrator")) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; } else { Layout = "~/Views/Shared/_StaffLayout.cshtml"; } }
@{int sr = 1;
    decimal? bal = 0; }
<div class="row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Sr.</th>
                <th>Plot No</th>
                <th>Block</th>
                <th>Type</th>
                <th>No.</th>
                <th>Amount</th>
                <th>Balance</th>
            </tr>
        </thead>
        @foreach (var item in Model.OrderBy(x => x.Date))
        {
            bal += item.Amount;
            string col = "";
            if (item.Type == "Commession")
            {
                col = "bgc-yellow-50";
            }
            else if (item.Type == "Voucher")
            {
                col = "bgc-red-50";
            }
            <tr class="@col">
                <td>@sr</td>
                <td>@item.Plot_number</td>
                <td>@item.Block</td>
                <td>@item.Name</td>
                <td>@item.Receipt</td>
                <td>@item.ReceiptNo</td>
                <td>@item.Amount</td>
                <td>@bal</td>
            </tr>
            sr++;
        }
    </table>
</div>
<style>
    tr td,tr th{
        padding:2px;
        font-size: 12px;
    }
</style>