@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Lead_Followup_Search_Result>

<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }
</style>
<table id="loan-list" class="table table-striped table-bordered " cellspacing="0" width="100%" style="margin-left:0%">
    <thead class="thead-dark">
        <tr>
            <th>Sr.</th>
            <th>Name</th>
            <th>Description</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>Offer price</th>
            <th>Block</th>
            <th>User Name</th>
        </tr>
    </thead>

    <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;


                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.LeadName</td>
                        <td>@item.Description</td>
                        <td>@item.Mobile_1</td>
                        <td>@item.Address</td>
                        <td>@item.Offered_Price</td>
                        <td>@item.Block</td>
                        <td>@item.Username</td>
                    </tr>

                    i++;
                }

            }

        }

    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#total_amount').text($('#Amount').val());
    });

    $(document).ready(function () {
        $('#inv-rep').DataTable({
            ordering: false
        });
    });

    $(document).ready(function () {
        $('#loan-list').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ]
        });
    });




</script>

<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
