@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_PropertyDeal_Request_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class=" bgc-white bd bdrs-3 p-20 mB-20 row">
    <div class="col-md-12">
        <table id="allleads" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.</th>
                    <th>Plot Number</th>
                    <th>Block</th>
                    <th>Status</th>
                    <th>Type</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            string statuscolor = "";
                            if (item.Status == "Processed") { statuscolor = "bgc-green-50"; }
                            <tr class="pointer @statuscolor cash-deal-dets" id="@item.Deal_Id">
                                <td>@srcounter</td>
                                <td>@item.File_Plot_Number</td>
                                <td>@item.Block</td>
                                <td>@item.Status</td>
                                <td>@item.Type</td>
                                <td>@item.Name</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#allleads').DataTable({
        });
    });

</script>