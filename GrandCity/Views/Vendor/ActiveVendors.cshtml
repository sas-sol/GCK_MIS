
@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Vendor_Status_Result>

<table id="Vendor" class="table table-striped table-bordered " cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th >Sr.</th>
            <th >Company</th>
            <th >Name</th>
            <th >Address</th>
            <th >Email</th>
            <th >Office Mobile</th>
            <th>Fax</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{

            if (!Model.Any())
            {
                <tr><td colspan="10" style="text-align:center">No data available</td></tr>
            }
            else
            {
                int sr = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@sr</td>
                        <td>@item.Company</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>                    
                        <td>@item.Office_Mobile</td>
                        <td>@item.Fax</td>
                        <td>@item.City</td>
                        <td>
                            <i class="pointer ti-pencil upd-ven" data-toggle="modal" data-target="#Modal" id="@item.Id"></i>
                           
                            
                            @*<i class="ti-info pointer ven-lst-det" data-toggle="modal" data-target="#Modal" id="@item.Id"></i>
                                <span>&nbsp;&nbsp;&nbsp;</span>
                                <button class="btn btn-info v-pay-det" style="padding:2px;font-size:12px">Payment Details</button>
                                <i class="pointer ti-trash del-ven" id="@item.Id"></i>*@
                        </td>
                        <td><i class="pointer fa fa-info-circle  ven-det" id="@item.Id"></i></td>
                    </tr>
                    sr++;
                }
            }
        }
    </tbody>
</table>
 
<script>
    $(document).ready(function () {
        $('#Vendor').DataTable({
            dom: 'Bfrtip'
        });
    });
</script>
