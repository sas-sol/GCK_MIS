@model MeherEstateDevelopers.Models.Vendor

@using (Html.BeginForm("UpdateVendorResult", "Vendor", FormMethod.Post, new { @id = "ven-update", @class = "", role = "form", autocomplete = "off" }))
{
    <input type="hidden" class="VenId" name="Id" value="@Model.Id" />

    <div class="col-md-12">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Company</label>
                <input type="text" class="form-control" name="Company" value="@Model.Company" required>
            </div>
           
            <div class="form-group col-md-6">
                <label>Address</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group col-md-3">
                <label>Email</label>
                <input type="email" class="form-control" name="Email"  value="@Model.Email">
            </div>

            <div class="form-group col-md-3">
                <label>Company Phone</label>
                <input type="text" class="form-control" name="Office_Mobile" value="@Model.Office_Mobile">
            </div>

            <div class="form-group col-md-3">
                <label>Fax</label>
                <input type="text" class="form-control" name="Fax" value="@Model.Fax">
            </div>
            <div class="form-group col-md-3">
                <label>City</label>
                <input type="text" class="form-control" name="City" value="@Model.City">
            </div>
            <div class="form-group col-md-3">
                <label>NTN</label>
                <input type="text" class="form-control" name="NTN" value="@Model.NTN">
            </div>
            <div class="form-group col-md-3">
                <label>STRN</label>
                <input type="text" class="form-control" name="STRN" value="@Model.STRN">
            </div>
        </div>
    </div>

}

<script>
    $(function () {
        $('.modal-footer').append('<button type="click" id="ven-update-btn" class="btn btn-primary">Update</button>');
    });
</script>