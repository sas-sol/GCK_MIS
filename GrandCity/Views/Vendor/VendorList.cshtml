
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div id="" class="bgc-white bd bdrs-3 p-20 mB-20">
    <div class="row">
        <div class="col-md-6">
            <h4 class="c-grey-900 mB-20">Vendors List</h4>
        </div>
        @if (User.IsInRole("Add New Vendor") || User.IsInRole("Administrator"))
        {
            <div class="col-md-3">
                <button class="btn btn-danger temp-reg-ven" data-toggle="modal" data-target="#Modal">Add New Vendor</button>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary reg-ven" data-toggle="modal" data-target="#Modal">Register Vendor</button>
            </div>
        }

    </div>
    
    <div class="col-md-12">
        <ul class="nav nav-tabs" role="tablist" id="myTabs">
            <li class="nav-item"><a class="nav-link active " role="tab" data-toggle="tab" data-link="/Vendor/ActiveVendors/" id="proj" href="#coahead">Active</a></li>
            <li class="nav-item"><a class="nav-link " role="tab" data-toggle="tab" data-link="/Vendor/ArchiveVendors/" id="proj" href="#coahead">Archive</a></li>

        </ul>
        <div class="tab-content">
            <div role="tabpanel" id="coahead" class="tab-pane active p-20 table-responsive">
            </div>
        </div>
    </div>
    </div>
    <script>
        $(function () {
            SASLoad($('#coahead'));
            $('#coahead').load('/Vendor/ActiveVendors/', function () {
                SASUnLoad($('#coahead'));
            });
        });
    </script>

 
