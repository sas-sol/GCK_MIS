
@using (Html.BeginForm("TempRegisterVendor", "Vendor", FormMethod.Post, new { @id = "reg-vendor", @class = "", role = "form", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Company</label>
                <input type="text" class="form-control" name="Company" required>
            </div>
           
            <div class="form-group col-md-6">
                <label>Address</label>
                <input type="text" class="form-control" name="Address">
            </div>
            <div class="form-group col-md-3">
                <label>Email</label>
                <input type="email" class="form-control" name="Email">
            </div>

            <div class="form-group col-md-3">
                <label>Company Phone</label>
                <input type="text" class="form-control" name="Office_Mobile">
            </div>

            <div class="form-group col-md-3">
                <label>Fax</label>
                <input type="text" class="form-control" name="Fax">
            </div>
            <div class="form-group col-md-3">
                <label>City</label>
                <input type="text" class="form-control" name="City">
            </div>
            <div class="form-group col-md-3">
                <label>NTN</label>
                <input type="text" class="form-control" name="NTN">
            </div>
            <div class="form-group col-md-3">
                <label>STRN</label>
                <input type="text" class="form-control" name="STRN">
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        $('.modal-footer').append(' <button type="button" class="btn btn-primary temp-reg-vendor-btn">Register</button>');
    });
</script>
