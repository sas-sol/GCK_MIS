@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<h6 class="c-grey-900">Add A New Project</h6>
<div class="row  bgc-white bd bdrs-3 p-20 mB-20">

    <div class="col-md-6">
        <div class="form-row">
            <div class="col-md-12">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label>Project Name</label>
                        <input type="text" class="form-control" name="" id="prjname">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Description</label>
                        <textarea cols="6" rows="3" class="form-control" id="des"></textarea>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-md-12 " id="ad-pln-fac">
                <h6 class="c-grey-900">Monthly Fee Structure</h6>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-2">
                    </div>
                    <div class="form-group col-md-3">
                        <h6 class="c-grey-900">Membership</h6>
                    </div>
                    <div class="form-group col-md-3">
                        <h6 class="c-grey-900">Monthly</h6>
                    </div>
                </div>
                <div class="form-row" id="">
                    <div class="form-group col-md-2">
                        <h6 class="c-grey-900">Employee</h6>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma empmem" placeholder="12,345" required>
                        <input type="hidden" id="empmem" name="Amount" class="amt" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma empmon" placeholder="12,345" required>
                        <input type="hidden" id="empmon" name="Amount" class="amt" required>
                    </div>
                </div>
                <div class="form-row" id="">
                    <div class="form-group col-md-2">
                        <h6 class="c-grey-900">Resident</h6>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma Resmem" placeholder="12,345" required>
                        <input type="hidden" id="Resmem" name="Amount" class="amt" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma resmon" placeholder="12,345" required>
                        <input type="hidden" id="resmon" name="Amount" class="amt" required>
                    </div>
                </div>
                <div class="form-row" id="">
                    <div class="form-group col-md-2">
                        <h6 class="c-grey-900">Outsiders</h6>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma outmem" placeholder="12,345" required>
                        <input type="hidden" id="outmem" name="Amount" class="amt" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input class="form-control coma outmon" placeholder="12,345" required>
                        <input type="hidden" id="outmon" name="Amount" class="amt" required>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary addpro" style="margin-left:53.5%">Add Plan</button>
    </div>
</div>
<hr />
<div class="row col-md-12" id="all-inst-strc-admin">
</div>
<script>
    $(document).ready(function () {
        $('#all-inst-strc-admin').load('/AdminFacilities/GetPlan/');
    });
</script>


