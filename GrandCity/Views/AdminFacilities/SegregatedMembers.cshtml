@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_RegisterdMembers_Segregated_Result>


<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }


</style>

<h4 class="c-grey-900 mB-20">@ViewBag.Project</h4>
<table id="" class="table table-striped table-bordered" cellspacing="0" width="100%">

    @{
        int sr = 1;
        <thead class="thead-dark">
            <tr>
                <th>Sr#</th>
                <th>Membership Type</th>
                <th>Name</th>
                <th>CNIC</th>
                <th>Email</th>
                <th>Mobile 1</th>
                <th>Mobile 2</th>
                <th>City</th>
                <th>Registration date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (!Model.Any())
                {
            <tr><td colspan="9" style="text-align:center">No data available</td></tr>
                }
                else
                {
                    <tr id="@item.Id" class="pointer mem-details">
                        <td>@sr</td>
                        <td>@item.Type</td>
                        <td>@item.Name</td>
                        <td>@item.CNIC</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile_1</td>
                        <td>@item.Mobile_2</td>
                        <td>@item.City</td>
                        <td>@string.Format("{0: dd-MMM-yyyy}", item.Register_Date)</td>
                    </tr>
                    sr++;
                }


            }

        </tbody>
    }


</table>




<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>