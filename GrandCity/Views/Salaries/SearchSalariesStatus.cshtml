                            <th>Loan/Advance</th>
                            <th>Tax Ded</th>
                            <th>Other Ded</th>
                            <th>Net Payable</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var g in Cash.GroupBy(x => new { x.DepartmentName, x.DepartmentId }))
