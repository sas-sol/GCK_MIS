<h5>Deductions</h5>
<div class="col-md-12">
    <div id="Deductions_and_tax">
        @if (Model.Any())
        {
            foreach (var item in Model.Where(x => x.Type == "OtherDeduction"))
            {
                <input type="hidden" class="DeductionAndTaxesSalaries" value="@item.Salaries_id" />
                <div class="from-row row">
                    @if (item.Description != "Absentee")
                    {
                        <div class="form-group col-md-3">
                            <label>@item.Description</label>
                        </div>
                        <div class="form-group col-md-3">
                            <label>@String.Format("{0:n0}", item.Amount)</label>
                        </div>
                    }

                    @if (item.Description != "Absentee" && item.Description != "Tax" && item.Userid == ViewBag.userid)
                    {
                        <div class="form-group">
                            <i class="ti-trash ded-taxes-rmv  pointer" id="@item.Id"></i>
                        </div>
                    }
                </div>
            }
        }
    </div>
    <div class="form-row row">
        <div class="col-md-8">
            <hr />
        </div>
    </div>
    <div class="from-row row">
        <div class="form-group col-md-5">
            <label>Description</label>
            <input class="form-control " type="text" id="detail_descrip" />
        </div>
        <div class="form-group col-md-3">
            <label>Amount</label>
            <input class="form-control coma" placeholder="12,345" required>
            <input type="hidden" id="sala_amt" name="Amount" class="amt" required>
        </div>
        <div class="form-group col-md-1">
          
            <button class="btn btn-primary" type="submit" id="save_deduc_and_Tax"  style="margin-top:29px" value="">Add</button>
        </div>
    </div>
</div>