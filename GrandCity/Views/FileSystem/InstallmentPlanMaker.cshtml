@model IEnumerable<MeherEstateDevelopers.Models.File_Installments>

<table id="" class="table table-striped table-bordered col-md-12" cellspacing="0" width="">
    <thead class="thead-dark">
        <tr>
            <th>Sr</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Paid Status</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                var sr = 1;

                foreach (var item in Model)
                {
                    <tr>
                        <td>@sr</td>
                        <td>@string.Format("{0: MMMM  yyyy}", item.Due_Date) @item.Installment_Name </td>
                        <td>@string.Format("{0:n0}", item.Amount)</td>
                        <td>@string.Format("{0: MMMM d, yyyy}", item.Due_Date)  </td>
                        <td>@item.Status</td>
                    </tr>
                    sr++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No Plan Found</td>
                </tr>
            }
        }
    </tbody>
</table>






