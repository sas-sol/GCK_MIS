@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<style>
    .col-centered {
        margin: 0 auto;
        float: none;
    }
</style>
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            @using (Html.BeginForm("SearchResult", "FileSystem", FormMethod.Post, new { @id = "sea-fil-info", @class = "", role = "form", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-row">

                    <div class="col-md-2" style="text-align:center"></div>
                    <div class="col-md-8" style="text-align:center">
                        <div class="form-group">
                            <input type="text" class="form-control" id="sea-box" name="Text" style="width:100%;line-height:3" placeholder="Search">
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="1" checked>File Number</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="2">Name</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="3">CNIC</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="4">Receipt</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="5">Mobile No</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="6">Nominee Name</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="7">Nominee CNIC</label>
                                <label class="form-check-label" style="margin-left:3%"><input class="form-check-input" type="radio" name="SearchOption" value="8">Instrument No.</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-2">
                        <button class="btn btn-primary" id="sea-fil-info" style="height:55px"><i class="ti-search"></i>&nbsp;&nbsp;&nbsp; Search </button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12 bgc-white p-20 bd" id="tab-data" style="display:none">

    </div>

    <div class="col-md-12" id="file-details">

    </div>
</div>
<script>
    $(function () {
        $("#sea-box").focus();
    });
</script>
