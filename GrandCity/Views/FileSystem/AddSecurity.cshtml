@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row gap-20 masonry pos-r">
    <div class="masonry-sizer col-md-8"></div>
    <div class="masonry-item col-md-8">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Add Security</h6>
            <div class="mT-30">
                @using (Html.BeginForm("AddSecurity", "FileSystem", FormMethod.Post, new { @id = "ad-sec", @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Project</label>
                            @Html.DropDownList("Projects", null, "Select Project", new { @class = "form-control prj-phas" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Phases</label>
                            <select class="form-control" name="Phase" id="phase">
                                <option>Select Project</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Block</label>
                            <select class="form-control" name="Block"  id="block">
                                <option>Select Phase</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Security Fees</label>
                            <input type="text" class="form-control" name="Price"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Security</button>
                }
            </div>
        </div>
    </div>
</div>