@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<script>
    var banklist = @Html.Raw(Json.Encode(ViewBag.Bank));
</script>
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Special Form Registeration</h6>
            <div class="mT-30">
                <div class="form-row row">
                    <div class="col-md-12">
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label>Group Number</label>
                                <input type="text" class="form-control" id="group-no" />
                            </div>
                            <div class="form-group col-md-3">
                                <input type="button" class="btn btn-info" style="margin-top:29px" id="ser-group-file" value="Search" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-row">
                            <table class="table table-striped table-bordered" id="fils-lst">
                                <thead>
                                    <tr>
                                        <th>Sr</th>
                                        <th>File Number.</th>
                                        <th>Plot Size</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            @using (Html.BeginForm("RegisterSpecialForm", "FileSystem", FormMethod.Post, new { @id = "re-bid-fil", @class = "", role = "form", autocomplete = "off" }))
            {
                <input type="hidden" name="GroupId" id="Group" />
                <div class="mT-30">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" value="Abdul Ghaffar" required>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Father's/Husband's Name</label>
                            <input type="text" class="form-control" name="Father_Husband" value="Muhammad Ismail" required>
                        </div>
                        <div class="form-group col-md-3">
                            <label>CNIC / NICOP</label>
                            <input type="text" class="form-control" name="CNIC_NICOP" value="35202-5726239-5" pattern="[0-9+]{5}-[0-9+]{7}-[0-9]{1}|[0-9+]{6}-[0-9+]{6}-[0-9]{1}" placeholder="12345-1234567-1   or   123456-123456-1" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Date Of Birth</label>
                            <input type="text" class="form-control" data-provide="datepicker" value="4/30/1973" name="Date_Of_Birth" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Postal Address</label>
                            <input type="text" class="form-control" name="Postal_Address" value="House # 1 Street 1 Muhallah Islam Nagar Shahdra Lahore" placeholder="1234 Main St" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Residential Address</label>
                            <input type="text" class="form-control" name="Residential_Address" value="House # 1 Street 1 Muhallah Islam Nagar Shahdra Lahore" placeholder="Apartment, Plot, or floor" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label>City</label>
                            @Html.DropDownList("City", null, "Choose..", new { @class = "form-control", required = "" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Occupation</label>
                            <input type="text" class="form-control" value="Businessman" name="Occupation" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Nationality</label>
                            <input type="text" class="form-control" value="Pakistani" name="Nationality" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Email</label>
                            <input type="text" class="form-control" value="" name="Email">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Phone Office</label>
                            <input type="text" class="form-control" value="" name="Phone_Office">
                        </div>
                        <div class="form-group col-md-3">
                            <label>Residential</label>
                            <input type="text" class="form-control" value="" name="Residential">
                        </div>

                        <div class="form-group col-md-3">
                            <label>Mobile 1</label>
                            <input type="text" class="form-control" value="03004003740" pattern="^0\d{10}" placeholder="03121234567" name="Mobile_1" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Mobile 2</label>
                            <input type="text" class="form-control" value="" pattern="^0\d{10}" placeholder="03121234567" name="Mobile_2">
                        </div>
                    </div>
                </div>
                <hr />
                <h6 class="c-grey-900">Nominee</h6>
                <div class="mT-30">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Name</label>
                            <input type="text" class="form-control" value="Abdul Jabbar" name="Nominee_Name" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label>CNIC / NICOP</label>
                            <input type="text" class="form-control" value="35202-5058139-3" pattern="[0-9+]{5}-[0-9+]{7}-[0-9]{1}|[0-9+]{6}-[0-9+]{6}-[0-9]{1}" placeholder="12345-1234567-1 or 123456-123456-1" name="Nominee_CNIC_NICOP" required>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Relation</label>
                            <input class="form-control" value="Brother" name="Nominee_Relation" placeholder="" required>
                        </div>
                        <div class="form-group col-md-5">
                            <label>Address</label>
                            <input type="text" class="form-control" value="House # 1 Street 1 Muhallah Islam Nagar Shahdra Lahore" name="Nominee_Address" placeholder="1234 Main St" required>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="col-md-3">
                        <h6 class="c-grey-900">Advance: <span id="adv-pmt"></span></h6>
                        <input type="hidden" id="adv-pmt-hid" />
                    </div>
                    <div class="col-md-3">
                        <button type="button" id="add-pay-typ" class="btn btn-info"><i class="ti-plus"></i>&nbsp; Add Payment</button>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" id="reg-plot" class="btn btn-primary">Register</button>
                    </div>
                </div>
                <div class="mT-30">
                    <div class="mT-30" id="pay-list">
                        <div class="form-row" id="pay-1">
                            <div class="form-group col-md-2">
                                <label>Cash / Bank</label>
                                <select class="form-control paytypesel" id="cah-chq-bak" required>
                                    <option value="Cash">Cash</option>
                                    <option value="BankDraft">Bank Draft</option>
                                    <option value="Cheque">Cheque</option>
                                    <option value="PayOrder">Pay Order</option>
                                    <option value="Online_Cash">Online - Cash</option>
                                    <option value="Online_Cheque">Online - Cheque</option>
                                    <option value="Online_Payorder">Online - PayOrder</option>
                                    <option value="Online_Bankdraft">Online - BankDraft</option>
                                </select>
                            </div>
                            <div class="form-group col-md-1">
                                <label>Amount</label>
                                <input class="form-control coma" placeholder="250,000" required>
                                <input type="hidden" id="Amount" class="amt" required>
                            </div>
                            <div class="form-group col-md-2 paymentotherinfo">
                                <label id="paytypelabel">-</label>
                                <input type="text" class="form-control" id="paymenttype" placeholder="" disabled required>
                            </div>
                            <div class="form-group col-md-1 paymentotherinfo">
                                <label>Date</label>
                                <input type="text" class="form-control" id="cbp-date" data-provide="datepicker" placeholder="mm/dd/yyyy" disabled required>
                            </div>
                            <div class="form-group col-md-2 paymentotherinfo">
                                <label>Bank</label>
                                <select class="form-control" id="bank" disabled>
                                    <option>Choose..</option>
                                </select>
                            </div>
                            <div class="form-group col-md-1 paymentotherinfo">
                                <label>Branch </label>
                                <input type="text" class="form-control" id="Branch" placeholder="Mall Rd" disabled required>
                            </div>
                            <div class="form-group col-md-1 paymentotherinfo" style="display: block;">
                                <label>Scan File</label>
                                <button class=" btn btn-block" data-v="2" type="button" id="scanbtn">Scan</button>
                            </div>
                            <div id="images-1" class="col-md-1 images"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<style>
    .paymentotherinfo {
        display: none;
    }

    #inst-stat {
        height: 1245px;
        overflow-y: scroll;
    }

    table tr th, table tr td {
        padding: 5px !important;
        font-size: 12px;
    }
</style>

<script>
    $(function () {
        InitBanks(1);
    });
    $(document).on("click", "#ser-group-file", function (e) {
        e.preventDefault();
        var id = $("#group-no").val();
        $.ajax({
            type: "POST",
            url: '/FileSystem/GroupFiles/',
            data: { Id: id },
            success: function (data) {
                $("#fils-lst tbody").empty();
                $("#fils-lst tfoot").empty();
                var total = 0;
                $("#Group").val(id);
                $(data.Files).each(function (i) {
                    var a = i + 1;
                    var html = '<tr><td>' + a + '</td><td>' + data.Files[i].FormNumber + '</td><td>' + data.Files[i].Plot_Size + '</td><td>' + Number(data.Files[i].Amount).toLocaleString() + '</td></tr>';
                    $("#fils-lst tbody").append(html);
                });
                var html1 = '<tr><th colspan="2"></th><th>Total Price</th><th id="ttl-pric">' + Number(data.Sum).toLocaleString() + '</th></tr>';
                $("#fils-lst tfoot").append(html1);
                $("#adv-pmt").html(Number(data.Sum).toLocaleString());
                $("#adv-pmt-hid").val(data.Sum);
            }
            , error: function (xmlhttprequest, textstatus, message) {
                if (textstatus === "timeout") {
                    alert("got timeout");
                } else {
                    alert(textstatus);
                }
            }
        });
    });

</script>