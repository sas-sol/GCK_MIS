@model IEnumerable<MeherEstateDevelopers.Models.Files_Transfer>
@using MeherEstateDevelopers.Models;
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">All Files</h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <td>File Number</td>
                    <td>Plot Size</td>
                    <td>Project</td>
                    <td>Phase</td>
                    <td>Block</td>
                    <td>Dealership</td>
                    <td>Development Charges</td>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            FileStatus filestat = (FileStatus)item.Status;
                            string status = filestat.ToString();
                            string statuscolor = "";
                            if (status == "Live") { statuscolor = "bgc-green-50"; }
                            <tr class="pointer @statuscolor" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.FileFormNumber</td>
                                <td>@item.Plot_Size</td>
                                <td>@item.Project_Name</td>
                                <td>@item.Phase_Name</td>
                                <td>@item.Block_Name</td>
                                <td>@item.Dealership_Name</td>
                                <td></td>
                                <td>
                                @if (item)
                                {
                                }</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
