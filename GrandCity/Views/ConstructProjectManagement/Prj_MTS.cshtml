                                    <div class="card m-0 p-0" style="border: white !important">
                                        <h5 class="card-header">End Date</h5>
                                        <div class="card-body">
                                            <p class="card-text">@string.Format("{0: dd-MMM-yyyy}", item.Deadline)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            stask += 1;
        }
    }
}

