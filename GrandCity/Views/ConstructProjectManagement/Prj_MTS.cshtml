                                <div class="col-md-2">
                                    <div class="card m-0 p-0" style="border: white !important">
                                        <h5 class="card-header">Qty</h5>
                                        <div class="card-body">
                                            <p class="card-text">@string.Format("{0:n}", item.Qty)</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
