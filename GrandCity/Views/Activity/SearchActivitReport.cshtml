@model IEnumerable<MeherEstateDevelopers.Models.ActivitiesList>
<h4 class="c-grey-900 mB-20">Date Search Activity</h4>
<table id="activit" class="table table-striped table-bordered " cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Activity Type</th>
            <th>Description</th>
            <th>Date & Time</th>
            <th>Activity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="" id="@item.Id">
                        <td>@item.Name</td>
                        <td>@item.Activity_Type.Replace('_', ' ')</td>
                        <td>@Html.Raw(item.Description)</td>
                        <td>@string.Format("{0:ddd dd MMM yyyy -- hh:mm tt}", item.DateTime)</td>
                        <td>@item.Activity</td>
                        <td>@item.Module</td>
                    </tr>

                }
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#activit').DataTable({
        });
        $('#activit a').each(function (index) {
            $(this).hide();
        });
    });
</script>



