<h5>Service Charges 123</h5>
<div class="form-row">
    <div class="form-group col-md-2">
        <label>Month</label>
        <select class="form-control" id="months">
            <option value="" selected disabled>Choose Month</option>
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
        </select>

    </div>
    <div class="form-group col-md-2">
        <label>Years</label>
        <select class="form-control" id="year">
            <option value="" selected disabled>Choose year</option>
        </select>
    </div>
    <div class="form-group col-md-2">
        <label style="width:100%">Block</label>
        @Html.DropDownList("Blocks", null, null, new { @id= "serv-Blocks", @class = "form-control blocklist", required = "", multiple = "" })
    </div>
    <div class="form-group col-md-1">
        <label>Search</label>
        <button id="servce-plt-lst-sht" class="btn btn-primary btn-block">Search</button>
    </div>
</div>
<div class="form-row">
    <div class="col-md-12" id="plot-ser-det">
        @{Html.RenderAction("ServiceCharges_Short", "Reports", new { month = DateTime.Now, year = DateTime.Now });}
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.blocklist').multiselect({
            includeSelectAllOption: true,
            enableCaseInsensitiveFiltering: true,
            enableFiltering: true,
            maxHeight: 200,
        });
    });

</script>