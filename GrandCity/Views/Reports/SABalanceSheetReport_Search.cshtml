@model IEnumerable<MeherEstateDevelopers.Models.SP_GET_BalanceSheet_AllCom_Result>

@*@{decimal sum = 0; }*@

<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }
</style>
<div class="col-md-12">
    <label><b style="font-size:30px">Meher Estate Developers (Pvt) Ltd</b></label>
</div>
<div class="col-md-12">
    <label><b style="font-size:30px">Statement of Financial Position</b></label>
</div>
<div class="col-md-12">
    <label><b style="font-size:30px">as at 31 Dec 2023</b></label>
</div>
@*<div class="col-md-12">
    <label><b style="font-size:30px">EQUITY AND LIABILITIES</b></label>
</div>*@

<table id="" class= " cellspacing="0" width="100%" style="margin-left:0%">
    <thead class="thead-dark">
        <tr>
            <th>Sr.</th>
            <th>Head</th>
            <th>Ruppes</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                <tr id="">
                    <td>@i</td>

                    @if (item.Head == "Assets" || item.Head == "Current Assets" || item.Head== "Non Current Assets" || item.Head== "Liabilites" || item.Head== "Current Liabilities"|| item.Head== "Non Current Current Liabilities" || item.Head== "Equity")
                    {
                        <td style="color:red;"><b>@String.Format("{0:n0}", item.Head)</b></td>
                    }
                    else
                    {
                        <td>@String.Format("{0:n0}", item.Head)</td>

                    }
                    <td>@String.Format("{0:n0}", item.Total)</td>
                </tr>
                    //{ sum = sum + Convert.ToDecimal(item.Total); }
                    //i++;
                }
            @*<tfoot>
                <tr>
                    <td colspan="1"></td>
                    <td colspan="1">Total</td>
                    <td>@String.Format("{0:n0}", sum)</td>
                </tr>
            </tfoot>*@
        }
        }
        </tbody>
    </table>
    <td style="background-color:rgba(0,0,0,0.5);">-</td>

    <script>

        $(document).ready(function () {
            $('#Assets').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>

    <style>
        tr.group,
        tr.group:hover {
            background-color: #ddd !important;
        }
    </style>

