@model IEnumerable<MeherEstateDevelopers.Models.Sp_Report_TransferAllotmentStatus_Result>
@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }
<div class=" bgc-white bd bdrs-3 p-20 mB-20 row">
    <div class="col-md-6">
        <h4 class="c-grey-900 mB-20">Transfer Plots Allotment Letter </h4>
    </div>
    <div class="col-md-12">
        <table id="allleads" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.</th>
                    <th>Name</th>
                    <th>Father Name</th>
                    <th>Plot No.</th>
                    <th>Block</th>
                    <th>Size</th>
                    <th>Allotment Letter</th>
                    <th>Receipt No.</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            string Status = "", Color = "";
                            if (item.Allotment_Letter == 1)
                            {
                                Status = "Generated";
                                Color = "bgc-green-50";
                            }
                            else if (item.Allotment_Letter == 2)
                            {
                                Status = "Ready For Generation";
                                Color = "bgc-yellow-50";
                            }
                            else if (item.Allotment_Letter == 3)
                            {
                                Status = "Requested";
                                Color = "bgc-orange-50";
                            }
                            else
                            {
                                Color = "bgc-red-50";
                                Status = "Not Generated";
                            }
                            <tr class="pointer led-vou-app @Color" data-toggle="modal" data-target="#Modal" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.Name</td>
                                <td>@item.Father_Name</td>
                                <td>@item.Plot_No</td>
                                <td>@item.Block</td>
                                <td>@item.Plot_Size</td>
                                <td>@Status</td>
                                <td>@item.ReceiptNo</td>
                                <td>@string.Format("{0:MM/dd/yyyy}", item.DateTime)</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#allleads').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>