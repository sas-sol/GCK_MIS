@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            <div class="mT-30">
                <div class="row">
                    @if (User.IsInRole("Plot Outstanding Report"))
                    {
                        <div class='col-md-3'>
                            <div class="layers bd bgc-white p-10 mt-2">
                                <div class="layer w-100" style="text-align: center;font-size: 17px;">
                                    <a href="/Reports/PlotsOutstanding/">Plots Outstanding Report</a>
                                </div>
                            </div>
                        </div>
                    }
                    @if (User.IsInRole("Service Charges Report"))
                    {
                        <div class='col-md-3'>
                            <div class="layers bd bgc-white p-10 mt-2">
                                <div class="layer w-100" style="text-align: center;font-size: 17px;">
                                    <a href="/Reports/ServiceChargesBills/">Service Charges Report</a>
                                </div>
                            </div>
                        </div>
                    }
                    @if (User.IsInRole("Electricity Charges Report"))
                    {
                        <div class='col-md-3'>
                            <div class="layers bd bgc-white p-10 mt-2">
                                <div class="layer w-100" style="text-align: center;font-size: 17px;">
                                    <a href="/Reports/ElectricityCharges/">Electricity Charges Report</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-12" id="tab-data"></div>
        </div>
    </div>
</div>


