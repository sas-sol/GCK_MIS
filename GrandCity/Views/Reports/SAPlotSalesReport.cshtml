@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="row">
    <div class="col-md-12">
        <div class="bdrs-3 ov-h bgc-white p-10 bd">
            <div class="form-row">
                <h5>Plot Sale Report</h5>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label style="width:100%">From</label>
                    <input type="text" data-provide="datepicker" id="from" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label style="width:100%">To</label>
                    <input type="text" data-provide="datepicker" id="to" class="form-control" />
                </div>

                <div class="form-group col-md-2">
                    <label style="width:100%">Blocks</label>
                    @Html.DropDownList("Blocks", null, "Choose..", new { @class = "form-control", required = "" })
                </div>
                <div class="form-group col-md-2">
                    <label style="width:100%">Type</label>
                    <select id="pltType" class="form-control">
                        <option value="">Select Type</option>
                        <option value="Residential">Residential</option>
                        <option value="Commercial">Commercial</option>
                    </select>
                </div>
                @*<div class="form-group col-md-2">
                    <label style="width:100%">Sector</label>
                    <select id="sector" class="form-control">
                        <option value="">No Sector</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="E">E</option>
                        <option value="F">F</option>
                        <option value="G">F</option>
                    </select>
                </div>*@
                <div class="form-group col-md-2">
                    <button class="btn btn-info sea-do-plotsale-rprt" style="margin-top:29px">Search</button>
                </div>
            </div>
            <div id="report">

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        debugger
        $("#report").load("/Reports/SAPlotSalesReport_Search/", function () {
            SASUnLoad($("#report"));
        });
    });

    $('.sea-do-plotsale-rprt').click(function () {
        debugger
        SASLoad($("#report"));
        var from = $("#from").val();
        var to = $("#to").val();
        var block = $("#Blocks").val();
        var type = $("#pltType").val();

        $("#report").load("/Reports/SAPlotSalesReport_Search/", { Block: block, Type: type, From: from, To: to }, function () {
            SASUnLoad($("#report"));
        });
    });
</script>
