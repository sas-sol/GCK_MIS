    <div class="form-group col-md-2">
        <label>Search</label>
        <button id="electric-plt-lst-sht" class="btn btn-primary btn-block">Search</button>
    </div>
</div>
<div class="form-row">
    <div class="col-md-12" id="plot-elect-det">
        @{Html.RenderAction("ElectricityCharges_Short", "Reports", new { month = DateTime.Now, year = DateTime.Now });}
