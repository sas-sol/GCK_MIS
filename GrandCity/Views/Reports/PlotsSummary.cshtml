
@model MeherEstateDevelopers.Models.AuditorHome_Report
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<div id="transfercontainer54"></div>

<script>
     // Build the chart 1
    $(document).ready(function () {
        const plotsum = Highcharts.chart('transfercontainer54', {
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie',
                height: 250,
                backgroundColor: '#212639'
            },
            title: {
                text: 'Plots Summary'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.y:1f}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false,
                        format: '<b>{point.name}</b>: {point.y:1f}',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        },
                        connectorColor: 'silver'
                    }
                }
            },
            series: [{
                name: 'Summary',
                data: @Html.Raw(Json.Encode(Model.Counter))
    }]
        });

        $.ajax({
            type: "POST",
            url: '/Reports/GetCompanyOwnPropsCount/',
            data: {},
            success: function (data) {
                if (data != null) {
                    $('.comp-owned').text(data);
                }
                else {
                    $('.comp-owned').text('0');
                }
            }
            , error: function (xmlhttprequest, textstatus, message) {
                $('.comp-owned').text('0');
            }
        });
        __high_chrts_instances.push(plotsum);
    });



</script>