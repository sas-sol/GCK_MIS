@model IEnumerable<MeherEstateDevelopers.Models.Inventory_PO_Terms>

<div class="col-md-12">
    <div class="form-row">
        <h5>Terms & Conditions</h5>
    </div>
    @if (Model.Any())
    {
        int sr = 1;
        <table class="table table-bordered">
            <tr>
                <th>Sr</th>
                <th>Terms</th>
                <th>Date</th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>@sr</td>
                        <td>@item.Terms</td>
                        <td>@string.Format("{0:dd-MMM-yyyy}", item.Date)</td>
                        <td><i class="ti-trash del-term"></i></td>
                    </tr>
                     sr++;
                }
            </tbody>
        </table>
    }
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Terms</label>
            <input type="text" class="form-control" id="term" />
        </div>
        <div class="form-group col-md-3">
            <label>Date Bound</label>
            <input type="text" class="form-control" data-provide="datepicker" id="date"  />
        </div>
        <div class="form-group col-md-2"><button class="btn btn-primary ad-term" style="margin-top:29px">Save</button></div>
    </div>
</div>