@using (Html.BeginForm("AddOtherCharges", "Procurement", FormMethod.Post, new { @id = "ad-oth-ch", @class = "", role = "form", autocomplete = "off" }))
{
    <input type="hidden" name="Group" value="@ViewBag.Group_Id" />
    <input type="hidden" name="PO_Num" value="@ViewBag.PO_Number" />
    <input type="hidden" name="Vend_Id" value="@ViewBag.Vend_Id" />
    <input type="hidden" name="Vend_Name" value="@ViewBag.Vend_Name" />
    <input type="hidden" name="Vend_Comp" value="@ViewBag.Vend_Comp" />
    <div class="col-md-12">
        <div class="form-row">
            <div class="form-group col-md-3"></div>
            <div class="form-group col-md-3">
                <label>Type</label>
                <select class='form-control' name="Charges">
                    <option value="Transportation">Transportation</option>
                    <option value="Loading">Loading</option>
                    <option value="Unloading">Unloading</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label>Total / <select class="ccy" name="C"><option value="Rs">Rs</option><option value="$">$</option><option value="£">£</option></select></label>
                <input type="text" class="form-control amt coma" name="Amount">
            </div>
            <div class="form-group col-md-3"></div>
        </div>
    </div>
}
<script>
    $(function () {
        $('.modal-footer').append(' <button type="button" class="btn btn-primary ad-oth-char-btn">Submit</button>');
    });
</script>