@model MeherEstateDevelopers.Models.POStatuses
<table class="table table-bordered po-partial " style="width:30%;height:300px; overflow-y:scroll">
    <thead>
        <tr>
            <td>Sr.</td>
            <td>Department</td>
            <td>Total</td>
        </tr>
    </thead>
    <tbody>
        @{
            int iii = 1;
            var res = Model.PO.GroupBy(x => new { x.Group_Id, x.Dep_Name }).Select(x => new { x.Key.Group_Id, x.Key.Dep_Name }).ToList();
        }
        @foreach (var item in res.GroupBy(x => new { x.Dep_Name }).OrderByDescending(x => x.Count()))
        {
            <tr>
                <td>@(iii++)</td>
                <td>@item.Key.Dep_Name</td>
                <td>@item.Count()</td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    @*<button type="button" style="text-align:right" class="btn btn-info all-comp-rep">Generate Comparitive Report</button>*@
    <button type="button" style="text-align:left" class="btn btn-success all-comp-rep">Generate Purchase Orders Report</button>
</div>
<table class="table table-bordered potbl" cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th width="750px">Month</th>
            <th width="750px">Department</th>
            <th width="150px">Project</th>
            <th width="750px">Items</th>
            <th width="120px">PO#</th>
            <th width="120px">Date</th>
            <th width="120px">Generated By</th>
            <th width="120px">Vendor</th>
            <th width="120px">GRNs</th>
            <th width="50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PO.Any())
        {
            foreach (var po in Model.PO.GroupBy(x => new { x.PO_Number, x.Dep_Name, x.Prj_Name, x.Project_Department, x.Prj_Offsite, x.DateTime, x.CreatedBy_Name, x.Vendor_Name, x.Requistion_No, x.Summary_Gen, Summary_Date = string.Format("{0:yyyy-MM-dd}", x.Summary_Date), x.Group_Id }).OrderByDescending(x => x.Key.DateTime.Value.Year).ThenByDescending(x => x.Key.DateTime.Value.Month).ThenBy(x => x.Key.Dep_Name).ThenByDescending(x => x.Key.DateTime).ToList())
            {
                int ii = 1;
                decimal? Receivedval = 0;
                foreach (var a in po)
                {
                    var it = Model.GRN.Where(x => x.Item_Id == a.Item_Id && x.PO_Number == po.Key.PO_Number).FirstOrDefault();
                    if (it != null)
                    {
                        Receivedval += it.R_Qty * a.Purchase_Rate;
                    }
                }
                if (Receivedval == 0)
                {
                    continue;
                }
                <tr id="@po.Key.PO_Number" data-grp="@po.Key.Group_Id">

                    <td class="pur-req-prdct-name">@string.Format("{0:MMMM - yyyy}", po.Key.DateTime)</td>
                    <td>@po.Key.Dep_Name</td>
                    <td>
                        @po.Key.Prj_Name
                        <br />
                        <b>@((po.Key.Prj_Offsite == true) ? "Offsite" : "")</b>
                        <br />
                        @po.Key.Project_Department
                    </td>
                    <td class="tdscrol" style="">
                        <table class="table" style="margin-bottom:0px; border:none">
                            <thead>
                                <tr>
                                    <th width="50px">Sr</th>
                                    <th width="350px">Item</th>
                                    <th width="50px">Qty</th>
                                    <th width="50px">UOM</th>
                                    <th width="150px">Rate</th>
                                    <th width="150px">Gst</th>
                                    <th width="150px">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in po)
                                {
                                    string cl = (v.StockEntered == true) ? "bgc-green-50" : "bgc-red-50";
                                    <tr class="@cl">
                                        <th style="max-width:50px">@ii</th>
                                        <td>@v.Item_Name</td>
                                        <td>@string.Format("{0:0,0.##}", v.Qty)</td>
                                        <td>@v.UOM</td>
                                        <td>@string.Format("{0:0,0.##}", v.Purchase_Rate)</td>
                                        <td>@string.Format("{0:0,0.##}", v.Tax)</td>
                                        <td>@v.Currency. @string.Format("{0:0,0.##}", v.TotalVal)</td>
                                    </tr>
                                    ii++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th colspan="2">Total PO Value</th>
                                    <th>@po.Select(x => x.Currency).FirstOrDefault(). @string.Format("{0:0,0.##}", po.Sum(x => x.TotalVal))</th>
                                </tr>
                            </tfoot>
                        </table>
                    </td>

                    <td class=" pointer">
                        @if (po.Key.CreatedBy_Name != null)
                        {
                            <a href="/Inventory/PrintPurchaseOrder?poNum=@po.Key.PO_Number" target="_blank">@po.Key.PO_Number <i class="ti-eye"></i></a>
                            <br />
                            <a href="/Procurement/QuotationFinalization?Group_Id=@po.Key.Group_Id" target="_blank">@po.Key.Requistion_No <i class="ti-eye"></i></a>

                        }
                        else
                        {
                            <a class="btn btn-primary" style="max-width:100px;height:auto;text-overflow: clip;white-space: break-spaces;" href="/Procurement/PurchaseDetails?po=@po.Key.PO_Number" target="_blank">Finalize Purchase Order</a>
                        }
                    </td>
                    <td>@string.Format("{0:dd-MMM-yyyy}", po.Key.DateTime)</td>
                    <td>@po.Key.CreatedBy_Name</td>
                    <td>@po.Key.Vendor_Name</td>
                    <td>
                        @foreach (var item in Model.GRN.Where(x => x.PO_Number == po.Key.PO_Number).GroupBy(x => x.GRN))
                        {
                            <a href="/Inventory/GoodReceiveNotePrint?Id=@item.Key" target="_blank">@item.Key</a>
                            <br />
                        }
                    </td>
                    <td>
                        <input type="checkbox" value="@po.Key.PO_Number" class="po-fin" />
                        <ul style="list-style:none;margin-left:0px;">
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle no-after peers" data-toggle="dropdown">
                                    <i class="ti-more-alt  c-grey-900" style="transform:rotate(90deg);"></i>
                                </a>

                                <ul class="dropdown-menu" style="padding:10px;min-width:210px !important">
                                    <li class="up-pur-order mt-1" data-toggle="modal" data-target="#Modal" data-bidIden="@po.Key.PO_Number"><i class="ti-pencil"></i>&nbsp;&nbsp;Revise</li>
                                    <li class="ser-po-inv mt-1"><i class="ti-panel"></i>&nbsp;&nbsp;Pay Advance </li>
                                    @if (po.Key.CreatedBy_Name == null || User.IsInRole("Reverse to Department"))
                                    {
                                        <li class="sen-bk-to-dep mt-1" data-grpid="@po.Key.Group_Id"><i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Send Back to Department</li>
                                    }
                                    @if (po.Key.Prj_Offsite == true)
                                    {
                                        <li class="gen-dev-no mt-1" data-grpid="@po.Key.PO_Number"><i class="ti-panel"></i>&nbsp;&nbsp;Generate Delivery Note</li>
                                    }
                                    <li class="mt-1"><i class="ti-panel"></i>&nbsp;&nbsp;<a href="/Inventory/BidsListing?Group=@po.Key.Group_Id" target="_blank">Requisition Details</a></li>
                                </ul>
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No Record Exists</td>
            </tr>
        }
    </tbody>
</table>
<style>
    .tdscrol {
        padding: 0px;
        max-height: 500px;
        overflow-y: scroll;
        display: block;
        padding: 0px !important;
    }
</style>
<script>
    $(document).ready(function () {
        $('.potbl').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            //order: [[2, 'asc'], [0, 'asc']],
            rowGroup: { dataSrc: [0, 1] },
            columnDefs: [{ targets: 5, type: "date-eu" }],
            columnDefs: [{ targets: [1, 0], visible: false }],
            ordering: false
        });
        $('.po-partial').DataTable({
            "searching": false,
            "pageLength": 5
        });
    });
</script>
