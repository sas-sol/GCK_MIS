@model IEnumerable<MeherEstateDevelopers.Models.Inventory_PurchaseOrder>
@{
    Layout = null;
}

@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="bgc-white bd bdrs-3 p-20 mB-20" ">

    <div class="form-row">
        <div class="col-md-12">
            <h4>Generated Purchase Orders</h4>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered potbl">
            <thead class="thead-dark">
                <tr>
                    <th>Po#</th>
                    <th>Date</th>
                    <th>Generated By</th>
                    <th>Vendor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var po in Model.GroupBy(x => new { x.Group_Id, x.PO_Number, x.DateTime, x.CreatedBy_Name, x.Vendor_Name }).OrderByDescending(x=> x.Key.DateTime).ToList())
                    {
                        <tr id="@po.Key.PO_Number" data-grp="@po.Key.Group_Id" class=" pointer ser-po-inv">
                            <td class=" rec-item">@po.Key.PO_Number</td>
                            <td>@string.Format("{0:dd-MMM-yyyy}", po.Key.DateTime)</td>
                            <td>@po.Key.CreatedBy_Name</td>
                            <td>@po.Key.Vendor_Name</td>
                            <td>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Qty</th>
                                            <th>UOM</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var v in po)
                                        {
                                            string cl = (v.StockEntered == true) ? "bgc-green-50" : "bgc-red-50";
                                            <tr class="@cl">
                                                <td>@v.Item_Name</td>
                                                <td>@v.Qty</td>
                                                <td>@v.UOM</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No Record Exists</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

