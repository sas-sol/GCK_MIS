


@model MeherEstateDevelopers.Models.Sp_Get_LeaveDetails_Result

<input type="hidden" class="apprvl_id" value="@Model.Id">
<input type="hidden" id="lv_type" value="@Model.LeaveType">
<input type="hidden" id="lv_emp" value="@Model.EmpId">
<input type="hidden" id="Manager" />
<div class="col-md-12">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Employee Name</label>
            <input type="text" class="form-control" name="" value="@Model.Name" readonly>
        </div>
        <div class="form-group col-md-3">
            <label>Leave Type</label>
            <input type="text" class="form-control" name="" value="@Model.LeaveType" readonly>
        </div>
        <div class="form-group col-md-3">
            <label>Reason</label>
            <input type="text" class="form-control" name="" value="@Model.Reason" readonly>
        </div>

    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-3">
        <label>Start Date</label>
        <input type="text" class="form-control" name="" value="@string.Format("{0: MM/dd/yyyy}", Model.StartDate)" readonly>
    </div>
    <div class="form-group col-md-3">
        <label>End Date</label>
        <input type="text" class="form-control" name="" value="@string.Format("{0: MM/dd/yyyy}", Model.EndDate)" readonly>
    </div>
    <div class="form-group col-md-3">
        <label>No of Days</label>
        <input type="text" class="form-control" name="" value="@Model.NoOfDays" readonly>
    </div>

</div>

<div class="form-row">
    <div class="col-md-6">
        <div class="form-group col-md-12">
            <label>Manager Remarks</label>
            <textarea type="text" class="form-control" id="mang-remarks" rows="2" disabled>@Model.ManagerRemarks</textarea>
        </div>
        <div class="form-group col-md-6">
            <select class="form-control" id="manager-stat" disabled>
                <option value="">Choose..</option>
                <option value="Approved">Approve</option>
                <option value="Rejected">Reject</option>
            </select>
        </div>
        <script>
            var a = "@Model.ManagerApproval";
            $("#manager-stat").val(a);
        </script>
    </div>
</div>
<input type="hidden" value="@ViewBag.Manager" />
@{
    if (ViewBag.Manager == true)
    {
        <script>
            $("#Manager").val(true);
            $("#mang-remarks").removeAttr("disabled");
            $("#manager-stat").removeAttr("disabled");
        </script>
    }
}

<script>
    $(function () {
        $('.modal-footer').append('<button class="btn btn-primary" id="lv-appro" type="button">Update</button>');
    });
</script>