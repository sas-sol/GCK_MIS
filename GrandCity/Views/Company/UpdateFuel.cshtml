@model IEnumerable<MeherEstateDevelopers.Models.Fuel>



@{

    int counter = 0;

    <table id="" class="table table-striped table-bordered " cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>SR #</th>
                <th>Type</th>
                <th>Rate</th>
                <th>Date</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @{

                if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        counter++;
                        <tr class="ful-up">
                            <td>@counter</td>
                            <td>
                                <input type="text" class="form-control Fuel_Type" value="@item.Fuel_Type" readonly />
                            </td>

                            <td>
                                <input type="text" class="form-control Fuel_Rate" value="@item.Fuel_Rate" />
                            </td>
                            <td>
                                <input type="text" class="form-control Date" data-provide="datepicker" placeholder="mm/dd/yyyy" name="Date" value="@string.Format("{0:MM/dd/yyyy}", item.Date)">
                            </td>
                            <td>
                                    <input type="checkbox" id="@item.Id" value="" onchange="" required="" class="peer upd-fuel-rate">
                                    <label class="peers peer-greed js-sb ai-c">
                                        <span class="peer peer-greed " style="font-weight:bold" id="" data-id=""> </span>
                                    </label>
                                
                            </td>
                        </tr>

                    }
                }
            }
        </tbody>
    </table>

}


