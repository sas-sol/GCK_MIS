@model MeherEstateDevelopers.Models.Comp_Dep_Desig

@{ if (User.IsInRole("Administrator")) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; } else { Layout = "~/Views/Shared/_StaffLayout.cshtml"; } }
<div class="gap-20 pos-r">
    <div class="col-md-12">
        <h6 class="c-grey-900">Add Designation</h6>
        <div class="bgc-white p-20 bd mT-30" id="des-1">
            @using (Html.BeginForm("AddDesignation", "Company", FormMethod.Post, new { @id = "ad-des", @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label>Designation Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Company</label>
                        @Html.DropDownList("Company_Id", null, "Choose..", new { @class = "form-control get-dep-ad-des", data_id = 1, required = "" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Departments</label>
                        <select class="form-control com-dep" name="Parent_Id"></select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Designation</button>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12">
        @{ Html.RenderAction("CompanyHierarchy", "Company");}
    </div>
</div>