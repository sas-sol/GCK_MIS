@model MeherEstateDevelopers.Models.Comp_Dep_Desig

@{ if (User.IsInRole("Administrator")) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; } else { Layout = "~/Views/Shared/_StaffLayout.cshtml"; } }
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white mT-30 p-20 bd">
            <h6 class="c-grey-900">Add Company</h6>
                @using (Html.BeginForm("AddCompany", "Company", FormMethod.Post, new { @id = "ad-com", @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Parent Company</label>
                        @Html.DropDownList("Parent_Company", null, "Choose..", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Description</label>
                        <textarea class="form-control" name="Description" rows="2"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Company</button>
                </div>
                }
            </div>
    </div>
    <div class="col-md-12">
        @{ Html.RenderAction("CompanyHierarchy", "Company");}
    </div>
</div>