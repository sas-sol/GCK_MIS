@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_All_Assigned_Assets_Result>
@{ if (User.IsInRole("Administrator")) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; } else { Layout = "~/Views/Shared/_StaffLayout.cshtml"; } }

<div class="col-md-12">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Asset List</h4>
        <table id="asset-dat" class="table table-striped table-bordered asset-dat" cellspacing="0" width="100%">
            <thead class="thead-dark">
                <tr>
                    <th>Employee Name</th>
                    <th>Asset Name</th>
                    <th>Type</th>
                    <th>Specification</th>
                    <th>Company Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        foreach (var g in Model)
                        {
                            <tr class="pointer comp-assets_pop_up" id="">
                                <td>@g.empname</td>
                                <td>@g.assetname</td>
                                <td>@g.type</td>
                                <td>@g.Specs</td>
                                <td>@g.Name</td>

                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#asset-dat').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
