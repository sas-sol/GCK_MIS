@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_PlotLastServiceCharges_Result>
@if (Model.Any())
{
    <div class="bgc-white p-20 bd">
        <div class="mT-30">
            <div class="form-row row">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label>Plot No.</label>
                            <h5 id="plt-no"></h5>
                        </div>
                        <div class="form-group col-md-1">
                            <label>Block</label>
                            <h5 id="plt-blk"></h5>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Type</label>
                            <h5 id="plt-type"></h5>
                        </div>
                            <div class="form-group col-md-1">
                                <button class="btn btn-info" data-id="@ViewBag.Plotid" id="rec-serv" data-toggle="modal" data-target="#Modal">Pay Bill</button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="mT-30">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Arrears</th>
                        <th>Grand Total</th>
                        <th>Month</th>
                        <th>Paid Amount</th>
                        <th>Paid Date</th>
                        <th>Due Date Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int ownercount = 1;
                        foreach (var item in Model)
                        {
                            if (ownercount == 1)
                            {
                                <script>
                                    var nam = "@item.Name", plotnum = "@item.Plot_No",blk = "@item.Block",typ = "@item.Plot_Type" ;
                                    $("#nam").text(nam);
                                    $("#plt-type").text(typ);
                                    $("#plt-blk").text(blk);
                                    $("#plt-no").text(plotnum);
                                </script>
                            }
                                <tr>
                                    <td>@string.Format("{0:n0}", item.Amount)</td>
                                    <td>@string.Format("{0:n0}", item.Arrears)</td>
                                    <td>@string.Format("{0:n0}", item.Grand_Total)</td>
                                    <td>@string.Format("{0:dd MMM yy}", item.Date)</td>
                                    <td>@string.Format("{0:n0}", item.Amount_Paid)</td>
                                    <td>@string.Format("{0:dd MMM yy}", item.PaidAmount_Date)</td>
                                    <td>@string.Format("{0:n0}", item.Net_Total)</td>
                                </tr>
                            ownercount++;
                        }
                    }
                </tbody>
            </table>
            
        </div>

    </div>
}
else
{
    <div class="bgc-white p-20 bd">
        <h5 class="c-grey-900">No Record Found</h5>
    </div>
}


