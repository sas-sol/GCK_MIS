@model MeherEstateDevelopers.Models.NewConnectionCharges
@if (Model != null)
{
    using (Html.BeginForm("PayNewConnectionChargesCommercial", "ServiceCharges", FormMethod.Post, new { @id = "pay-con-char-com", @class = "", role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" value="@Model.ComData.Plot_Id" name="PlotId" />
        <input type="hidden" value="@Model.Conch.Connection_Name" name="Connection" />
        <div class="bgc-white p-20 bd">
            <div class="mT-30">
                <div class="form-row row">
                    <div class="col-md-12">
                        <div class="form-row">
                            <div class="form-group col-md-1">
                                <label>Plot No.</label>
                                <h5 id="plt-no">@Model.ComData.Com_App_Shop_Number</h5>
                            </div>
                            <div class="form-group col-md-1">
                                <label>Block</label>
                                <h5 id="plt-blk">@Model.ComData.Project_Name</h5>
                            </div>
                            <div class="form-group col-md-2">
                                <label>Type</label>
                                <h5 id="plt-type">@Model.ComData.Module</h5>
                            </div>
                            <div class="form-group col-md-3">
                                <label>Name</label>
                                <h5 id="nam">@Model.OwnerDataCom.Name</h5>
                            </div>
                            <div class="form-group col-md-3">
                                <label>Connection Charges</label>
                                <h5 id="nam">@Model.Conch.Charges</h5>
                            </div>
                        </div>
                        <div class="form-row">
                            <button class="btn btn-info"  type="submit" id="pay-con-char-btn">Generate Receipt</button>
                        </div>
                    </div>

                </div>
            </div>
            <hr />

        </div>
    }
}
else
{
    <div class="bgc-white p-20 bd">
        <h5 class="c-grey-900">No Record Found</h5>
    </div>
}


