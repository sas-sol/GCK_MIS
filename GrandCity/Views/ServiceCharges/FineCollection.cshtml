
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="bgc-white p-20 bd">
            <div class="mT-30">
                <div class="form-row row">
                    <div class="col-md-12">
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label>Block</label>
                                @Html.DropDownList("Block", null, "Choose..", new { @class = "form-control blk-plots", required = "" })
                            </div>
                            <div class="form-group col-md-2 file-plot-sel" style="">
                                <label>File/Plot</label>
                                <select class="form-control fil-plot-dd">
                                    <option value="Plot">Plot</option>
                                    <option value="File">File</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 plt-field">
                                <label>Type</label>
                                <select class="form-control blk-plots" id="plot-type">
                                    <option value="Residential">Residential</option>
                                    <option value="Commercial">Commercial</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 plt-field">
                                <label>Plot No</label>
                                <select class="form-control" id="plot-details">
                                    <option>Select Block</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 file-field" style="display:none">
                                <label>File Number</label>
                                <input class="form-control" id="file_num" />
                            </div>
                            <div class="col-md-1 plt-field">
                                <button class="btn btn-info" id="sear-fin" style="margin-top:29px">Search Plot</button>
                            </div>
                            <div class="col-md-1 file-field" style="display:none">
                                <button class="btn btn-info" id="sear-file-char" style="margin-top:29px">Search File</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mT-30">
                <div class="form-row row">
                    <div class="col-md-12" id="plot-det">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
