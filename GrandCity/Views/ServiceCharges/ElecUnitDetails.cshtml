@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_UnitDetails_Electricity_Result>
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="row gap-20  pos-r">
    <div class="col-md-8">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Electricity Unit Rates</h6>
            <div class="mT-30">
                @foreach (var group in Model.GroupBy(m => m.Meter_Type))
                {
                    <h6 id="me-type">@group.Key</h6>
                    <table class="table table-striped table-bordered dataTable no-footer">
                        <thead>
                            <tr>
                                <th>Level</th>
                                <th>Start Range</th>
                                <th>End Range</th>
                                <th>Unit Rate</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in group)
                            {
                            <tr id="@item.Id">
                                <td>@item.Levels</td>
                                <td>@item.Start_Range</td>
                                <td>@item.End_Range</td>
                                <td>@item.Unit_Rate</td>
                                <td><i class="ti-pencil pointer ed-rate" data-toggle="modal" data-target="#Modal" ></i></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                }
            </div>
        </div>
    </div>

</div>