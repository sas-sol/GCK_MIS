@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Ballot_Qualifying_File_Result>
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}
<div class="row gap-20 pos-r">
    <div class="col-md-12">
        <div class="default-backgroud p-20 bd bgc-white">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <img style="width:50%;" src="~/assets/static/images/logo2.png" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <button class="btn btn-primary blt-btn" style="margin: 1% 0; font-size: 74px; padding: 2%; background-color: #e82026; border-color: #e82026">Perform Ballot</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" id="blt-res"></div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on('click', '.blt-btn', function () {
        SASLoad($('#blt-res'));
        $('#blt-res').load('/Balloting/BallotScreen/', function () {
            SASUnLoad($('#blt-res'));
        });
    })
</script>