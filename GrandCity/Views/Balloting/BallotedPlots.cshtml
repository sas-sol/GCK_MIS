                        }
                        __strc += `<tr id="${v.BallotFile}">
                        <td>${i + 1}</td>
                        <td>${v.PlotNo}</td>
                        <td>${v.Sector}</td>
                        <td>${v.PlotType}</td>
                        <td>${v.PlotSize}</td>
                        <td>${v.PlotArea} Marla</td>
