                    <td colspan="9">No Record Found</td>
                </tr>`;
                }
                else {
                    $.each(data, function (i, v) {
                        let _dem = ``;
                        if (v.LetterA == null) {
                            _dem = `<td><i class="fa fa-envelope fa-2x pointer prnt-ltr-fdsjkhl" data-vtag="${v.Id}" style="color:greenyellow;"></i></td>`;
                        }
                        else {
