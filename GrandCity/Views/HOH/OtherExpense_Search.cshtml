
@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_HOH_OtherExpense_List_Result>

@{
    decimal? sum = 0;

}
<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }
</style>

<table id="loan-list" class="table table-striped table-bordered " cellspacing="0" width="100%" style="margin-left:0%">
    <thead class="thead-dark">
        <tr>
            <th>Sr.</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Date</th>
            <th width="3%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>@i</td>
                        <td>@item.Description</td>
                        <td>@String.Format("{0:N}", item.Amount)</td>
                        <td>@item.Date.Value.ToShortDateString()</td>
                        <td>
                            <i data-toggle="modal" data-target="#Modal" id="@item.Id" class="edit-expns-rprt-hoh ti-pencil"></i>
                        </td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>

<script>


    $(document).ready(function () {
        $('#loan-list').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>

<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
