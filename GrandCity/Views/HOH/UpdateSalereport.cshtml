@model MeherEstateDevelopers.Models.HOH_Sales


<div class="row">
    <div class="col-md-12">
        <h2>House of Heritage Purchase Report</h2>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Qty</label>
                <input type="number" id="Qty" value="@Model.Qty" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label>Rate</label>
                <input type="number" id="Rate" value="@Model.Rate" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label>Remarks</label>
                <input type="text" id="Remarks" value="@Model.Remarks" class="form-control" />
            </div>
<input type="text" hidden id="ShopID" class="form-control" value="@ViewBag.ShopID" />
            <input type="text" id="Item_Id" hidden value="@Model.Item_Id" class="form-control" />
            <input type="text" id="Sale_Rate" hidden value="@Model.Sale_Rate" class="form-control" />
            <input type="text" id="Sale_Amount" hidden value="@Model.Sale_Amount" class="form-control" />
            <input type="text" id="Base_Amount" hidden value="@Model.Base_Amount" class="form-control" />
            <input type="text" id="DateTime" hidden value="@Model.DateTime" class="form-control" />
            <input type="text" id="Sale_Date" hidden value="@Model.Sale_Date" class="form-control" />
            <input type="text" id="Group_Id" hidden value="@Model.Group_Id" class="form-control" />
        </div>
    </div>
</div>
<script>
    $('.modal-footer').append('<button class="btn btn-info up-Sale-hoh" type="submit" id="@Model.Id" >Update</button>');
</script>