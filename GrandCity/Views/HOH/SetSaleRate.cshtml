@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_HOH_SaleRate_List_Result>
<script src="~/Scripts/hoh.js"></script>
@{ if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<input type="text" id="Shop_Id" hidden value="@ViewBag.ShopID" class="form-control" />
<div class="bgc-white bd bdrs-3 p-20 mB-20">
    <div class="row">
        <div class="col-md-12">
            <h4 class="c-grey-900 mB-20">Inventory Sale Rates</h4>
        </div>
    </div>

    <table id="Inventory-list" class="table table-striped table-bordered " cellspacing="0" width="100%" style="margin-left:0%">
        <thead class="thead-dark">
            <tr>
                <th>Sr.</th>
                <th>Name</th>
                <th>UOM</th>
                @*<th>Total Qty</th>*@
                <th>Sale Rate</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr id="@item.Id">
                            <td>
                                @i
                            </td>
                            <td>@item.Complete_Name</td>
                            <td>@item.UOM</td>
                            @*<td></td>*@
                            <td>
                                <input type="text" class="coma saveSalerate" value="@string.Format("{0:0,0.##}", item.Sale_Rate)" />
                            </td>
                        </tr>
                        i++;
                    }
                }
            }
        </tbody>
    </table>
</div>
