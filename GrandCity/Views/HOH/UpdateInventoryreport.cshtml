@model MeherEstateDevelopers.Models.HOH_Inventory


<input type="text" hidden id="ShopID" class="form-control" value="@ViewBag.ShopID" />
<div class="row">
    <div class="col-md-12">
        <h2>House of Heritage Other Expense Report</h2>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Name</label>
                <input type="text" id="Name" value="@Model.Item_Name" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label>UOM</label>
                <input type="text" id="UOM" value="@Model.UOM" class="form-control" />
            </div>
        </div>
    </div>
</div>
<script>
  $(document).on("change", "#uom", function () {
        var val = $(this).val();
        $("#u-pk").text(val + "/")
    });
    $('.modal-footer').append('<button class="btn btn-info up-inv-hoh" type="submit" id="@Model.Id" >Update</button>');
</script>