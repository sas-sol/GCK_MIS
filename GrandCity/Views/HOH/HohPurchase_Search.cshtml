@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_HOH_Purchase_List_Result>
<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }
</style>
<table id="loan-list" class="table table-striped table-bordered " cellspacing="0" width="100%" style="margin-left:0%">
    <thead class="thead-dark">
        <tr>
            <th>Sr.</th>
            <th>Name</th>
            <th>Qty</th>
            <th>Rate</th>
            <th>Vendor Named</th>
            <th>Remarks</th>
            <th>DateTime</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr id="@item">
                        <td>@i</td>
                        <td>@item.Complete_Name</td>
                        <td>@item.Qty</td>
                        <td>@item.Rate</td>
                        <td>@item.Vendor_Name</td>
                        <td>@item.Remarks</td>
                        <td>@item.Purchase_Date.Value.ToShortDateString()</td>
                        <td>@String.Format("{0:N}", item.Amount)</td>
                    </tr>
                    i++;
                }
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#loan-list').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>

<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
