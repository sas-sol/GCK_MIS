@model MeherEstateDevelopers.Models.CommercialDetailData
@if (Model != null)
{
    <input type="hidden" value="@Model.commercialData.Id" id="PlotId" name="PlotId" />
    <input type="hidden" value="CommercialManagement" name="Module" id="Module" />
    <div class="bgc-white p-20 bd">
        <div class="mT-30">
            <div class="form-row row">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label>@Model.commercialData.Type No</label>
                            <h5 id="plt-no">@Model.commercialData.shop_no</h5>
                        </div>
                        <div class="form-group col-md-1">
                            <label>Block</label>
                            <h5 id="plt-blk">@Model.commercialData.Floor</h5>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Size</label>
                            <h5 id="plt-size">@Model.commercialData.Area</h5>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Type</label>
                            <h5 id="plt-type">@Model.commercialData.Type</h5>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Name</label>
                            <h5 id="nam">@string.Join(",", Model.shopOwnersforallt.Select(x => x.Name))</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="bgc-white p-20 bd">
        <h5 class="c-grey-900">No Record Found</h5>
    </div>
}

