@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_CommercialAllotmentLetterRequests_Result>
@{
    if (User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
<div class="row">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Allotment Letter Request</h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <td>No</td>
                    <td>Project Name</td>
                    <td>Size</td>
                    <td>Name</td>
                    <td>Father Name</td>
                    <td>CNIC</td>
                    <td>Type</td>
                    <td>Location</td>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Any())
                    {
                        int srcounter = 1;
                        foreach (var item in Model)
                        {
                            <tr class="pointer plot__all__det__comm" id="@item.Id">
                                <td>@srcounter</td>
                                <td>@item.Shop_No</td>
                                <td>@item.Project_Name</td>
                                <td>@item.Area Sq Ft</td>
                                <td>@item.Name.Replace("Ѭ", "-")</td>
                                <td>@item.Father_Husband.Replace("Ѭ", "-")</td>
                                <td>@item.CNIC_NICOP.Replace("Ѭ", "-")</td>
                                <td>@item.Type</td>
                                <td>@item.Location</td>
                            </tr>
                            srcounter++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
