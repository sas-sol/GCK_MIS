@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Commercial_Search_Result>
<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }
    .scrolling-box {
        max-height: 300px;
        overflow-y: scroll;
        overflow-x: scroll;
        width: 50%;
        position: sticky;
        top: 0;
    }
    .tableFixHead {
        overflow: auto;
        height: 300px;
    }
        .tableFixHead .ka th {
            position: sticky;
            top: 0;
        }
</style>
<div class="bgc-white bd bdrs-3 p-20 mB-20">
    @*<h4 class="c-grey-900 mB-20">Commercial Details</h4>*@
        <table id="salary-dat" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="scrolling-box thead-dark">
                <tr>
                    <th width="10">Sr#</th>
                    <th width="140">Unit</th>
                    <th width="150">Floor</th>
                    <th width="120">Type</th>
                    <th width="140">Project</th>
                    <th width="140">Location</th>
                    <th width="150">Area</th>
                    <th width="200">Owner</th>
                    <th width="150">Status</th>
                    <th width="150">Verified</th>
                </tr>
            </thead>
            @{
                var counter = 1;
                if (!Model.Any())
                {
                    <tr><td colspan="10" style="text-align:center">No data available</td></tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
        <tr class="pointer get-com-roomdata" id="@item.Id">
            <td>@counter</td>
            @if (item.Project_Name == "SA Premium Homes")
            {
                <td>@item.ApplicationNo </td>
            }
            else
            {
                <td>@item.Com_App_Shop_Number </td>
            }
            <td>@item.floorlocation</td>
            <td>@item.Type </td>
            <td>@item.Project_Name</td>
            <td>@item.Location </td>
            <td>@item.Area Sq Ft</td>
            <td>@item.Name</td>
            @if (item.Status != null)
            {
                <td>@item.Status.Replace("_", " ") </td>
            }
            else
            {
                <td>_</td>
            }
            @if (item.Verify == true)
            {
                <td>Verified</td>
            }
            else
            {
                <td>Not Verified</td>
            }
        </tr>
                        counter++;
                    }
                }
            }
        </table>
</div>
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>