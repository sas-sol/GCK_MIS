
@*@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }*@
<div class="col-md-12">
    <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">Search Arrears</h4>
        <div class="row">
            <div class="form-group col-md-2">
                <label>Date</label>
                <input type="text" class="form-control sel-date" data-provide="datepicker" placeholder="mm/dd/yyyy" name="date">
            </div>
            <div class="col-md-1">
                <input type="button" value="Result" class="btn btn-primary" style="margin-top:29px" id="ser-arr-date" />
            </div>
        </div>
        <div id="ser-sal-app">
        </div>
    </div>
    <div id="res">
        @{ Html.RenderAction("SearchArrears", "ArrearsSalaries", new { From = DateTime.Now, Status = "Received"});}
    </div>
</div>

