@model MeherEstateDevelopers.Models.Sp_Get_Arrears_Salary_Result
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/salaryslip/Salry.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" media="print" href="~/Content/salaryslip/Salry.css">
    <title>SalarySlip</title>
</head>
<body>
  

    <div class=" ">
        <div id="payslip" class="">
            <div id="title">
                Employee Copy
                <img src="/assets/static/images/meherestate-simple.png" class="imagesas">
            </div>
            <div id="title2">
                <label class="" style="font-weight:700; float:left">Salary Month: &nbsp;@string.Format("{0:MMMMMMMMM, yyyy}", Model.Salary_Month) &nbsp;  </label>
            </div>
            <div class="content">
                <div class="left-panel ">
                    <div class="details" id="">
                        <div class="entry">
                            <div class="label">Basic Salary</div>
                            <div class="value">@string.Format("{0:n0}", Model.Basic_salary)</div>
                        </div>
                        <div class="entry">
                            <div class="label">Department</div>
                            <div class="value">@Model.DepName</div>
                        </div>
                        <div class="entry">
                            <div class="label">Employee Code</div>
                            <div class="value">@Model.Employee_code</div>
                        </div>
                        <div class="entry">
                            <div class="label">Employee Name</div>
                            <div class="value">@Model.Employee_Name</div>
                        </div>
                        <div class="entry">
                            <div class="label">CNIC / NICOP</div>
                            <div class="value">@Model.CNIC</div>
                        </div>
                        <div class="entry">
                            <div class="label">Date Hired</div>
                            <div class="value">@string.Format("{0: MM/dd/yyyy}", Model.Emp_Date_Of_Joining)</div>
                        </div>
                        <div class="entry">
                            <div class="label">Department & Position</div>
                            <div class="value">@Model.Employee_Designation</div>
                        </div>
                        <div class="entry">
                            <div class="label">Prepared by</div>
                            <div class="value">HR Department</div>
                        </div>
                    </div>
                    <div class="gross">
                        <div class="title">Gross Total</div>
                        <div class="entry">
                            <div class="label"></div>
                            <div class="value">Rs. @String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Arrears_Amount)))</div>
                        </div>
                    </div>
                </div>
                <div class="right-panel">
                    <div class="details">
                        <div class="taxable_allowance">
                            <div class="entry">
                                <div class="label">Description</div>
                                <div class="value">@Model.Description</div>
                            </div>
                            <hr />
                            <div class="entry">
                                <div class="label">Arrears Amount</div>
                                <div class="value">@string.Format("{0:n0}", Model.Arrears_Amount)</div>
                            </div>
                        </div>
                        <hr>
                        <div class="net_pay">
                            <div class="" style="width:100%">
                                <div class="label">NET PAY</div>
                                <div class="value">@string.Format("{0:n0}", Model.Arrears_Amount)</div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
            </div>
            <br />
            <div id="title2">
                Finance Manager Signature
                <lable class="imagesas">Employee Signature</lable>
            </div>
            <span>-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</span>
            <div style="margin-top:0%;">
                <div id="payslip">
                    <div id="title">
                        Accounts Copy
                        <img src="/assets/static/images/meherestate-simple.png" class="imagesas">
                    </div>
                    <div id="title2">
                        <label class="" style="font-weight:700; float:left">Salary Month: &nbsp;@string.Format("{0:MMMMMMMMM, yyyy}", Model.Salary_Month) &nbsp;  </label>
                    </div>
                    <div class="content">
                        <div class="left-panel ">
                            <div class="details" id="">
                                <div class="entry">
                                    <div class="label">Basic Salary</div>
                                    <div class="value">@string.Format("{0:n0}", Model.Basic_salary)</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Department</div>
                                    <div class="value">@Model.DepName</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Employee Code</div>
                                    <div class="value">@Model.Employee_code</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Employee Name</div>
                                    <div class="value">@Model.Employee_Name</div>
                                </div>
                                <div class="entry">
                                    <div class="label">CNIC / NICOP</div>
                                    <div class="value">@Model.CNIC</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Date Hired</div>
                                    <div class="value">@string.Format("{0: MM/dd/yyyy}", Model.Emp_Date_Of_Joining)</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Department & Position</div>
                                    <div class="value">@Model.Employee_Designation</div>
                                </div>
                                <div class="entry">
                                    <div class="label">Prepared by</div>
                                    <div class="value">HR Department</div>
                                </div>
                            </div>
                            <div class="gross">
                                <div class="title">Gross Total</div>
                                <div class="entry">
                                    <div class="label"></div>
                                    <div class="value">Rs. @String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Arrears_Amount)))</div>
                                </div>
                            </div>
                        </div>
                        <div class="right-panel">
                            <div class="details">
                                <div class="taxable_allowance">
                                    <div class="entry">
                                        <div class="label">Description</div>
                                        <div class="value">@Model.Description</div>
                                    </div>
                                    <hr />
                                    <div class="entry">
                                        <div class="label">Arrears Amount</div>
                                        <div class="value">@string.Format("{0:n0}", Model.Arrears_Amount)</div>
                                    </div>
                                </div>
                                <hr>
                                <div class="net_pay">
                                    <div class="" style="width:100%">
                                        <div class="label">NET PAY</div>
                                        <div class="value">@string.Format("{0:n0}", Model.Arrears_Amount)</div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div id="title2">
                Finance Manager Signature
                <lable class="imagesas">Employee Signature</lable>
            </div>
            <span>-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</span>
        </div>
    </div>
</body>
</html>
