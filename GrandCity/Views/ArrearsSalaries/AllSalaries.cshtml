@model IEnumerable<MeherEstateDevelopers.Models.Sp_Get_Arrears_Result>
@*@{ Layout = "~/Views/Shared/_StaffLayout.cshtml"; }*@
<style>
    table thead tr th, table tbody tr td {
        font-size: 12px;
    }

    .testbg {
        border: 3px solid red;
    }

    .scrolling-box {
        height: 600px;
        overflow-y: scroll;
        overflow-x: scroll;
        width: 100%;
    }
</style>
<h4 class="c-grey-900 mB-20" style="text-align:center">Employess Arrears</h4>
<button type="submit" class="btn btn-primary Arrears_Salary_Status" value="InProcess">Approve</button>
<div class="scrolling-box">
    <div class="bgc-white bdrs-3  mB-20">
        <table id="salary-dat" class="table table-striped table-bordered" cellspacing="0" width="100%">
            @{
                foreach (var g in Model.GroupBy(x => new { x.Name, x.depid }))
                {
                    int? g_dep = (g.Key.depid is null) ? 0 : g.Key.depid;
                    <thead class="">
                        <tr>
                            <th colspan="14" style="font-size:21px;text-align:center"> @g.Key.Name</th>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Designation</th>
                            <th>CNIC</th>
                            <th>Basic Salary</th>
                            <th>Per Day Wage</th>
                            <th>Date Of Joining</th>
                            <th>Description</th>
                            <th>Arrear Days</th>
                            <th>Deduction</th>
                            <th>Allownces</th>
                            <th>Arrear Amount</th>
                            <th>Grand Total</th>
                            <th>Forward</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in g)
                        {
                            <tr id="@item.Id" class="fin-up-arre pointer">
                                <td>@item.Name</td>
                                <td>@item.Employee_code</td>
                                <td>@item.Employee_Name</td>
                                <td>@item.Employee_Designation</td>
                                <td>@item.CNIC</td>
                                <td>@String.Format("{0:n0}", item.Basic_salary)</td>
                                <td>@( Math.Round(Convert.ToDecimal(item.Basic_salary / 30)) )</td>
                                <td>@string.Format("{0: dd-MMM-yyyy}", item.Emp_Date_Of_Joining)</td>
                                <td><input type="text" class="salary_remarks_Arrears" placeholder="" value="@item.Description" style="width:200px;" /></td>
                                <td><input type="text" class="arr-days" placeholder="" value="" data-pdWg="@Math.Round(Convert.ToDecimal(item.Basic_salary / 30))" style="width:200px;" /></td>
                                <td>@String.Format("{0:n0}", item.Deductions)</td>
                                <td>@String.Format("{0:n0}", item.Allownces)</td>
                                <td><input type="number" class="emp-arrear ArrearsAmount" placeholder="" value="@item.Arrears_Amount" style="width:150px;" /></td>
                                <td class="arr-grn @g_dep-1" id="@g_dep">@String.Format("{0:n0}", item.Grand_Total)</td>
                                <td>
                                    <ul style="list-style:none;margin-left:0px;">
                                        <li class="dropdown">
                                            <a href="" class="dropdown-toggle no-after peers " data-toggle="dropdown">
                                                <i class="ti-more-alt  c-grey-900" style="transform:rotate(90deg);"></i>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a id="@item.Id" class="pointer del-arr-sal"><span>Delete</span></a></li>
                                                <li><a id="InProcess" class="pointer reverse_arrears_salary"><span>Forward</span></a></li>

                                            </ul>
                                        </li>
                                    </ul>
                                </td>

                            </tr>
                        }
                        <tr>
                            <td style="font-size:20px" colspan="2">Gross Total</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(g.Select(x => x.Basic_salary).Sum())))</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(g.Select(x => x.Deductions).Sum())))</td>
                            <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(g.Select(x => x.Allownces).Sum())))</td>
                            <td></td>
                            <td class="@g_dep-11">@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(g.Select(x => x.Grand_Total).Sum())))</td>
                            <td></td>
                        </tr>
                    </tbody>
                }
            }
            <tfoot>
                <tr>
                    <td style="font-size:20px">Total</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Sum(x => x.Basic_salary))))</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Sum(x => x.Deductions))))</td>
                    <td>@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Sum(x => x.Allownces))))</td>
                    <td></td>
                    <td class="ArNetPaySum">@String.Format("{0:n0}", Math.Round(Convert.ToDecimal(Model.Sum(x => x.Grand_Total))))</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.del-arr-sal').unbind().click(function () {
            if (!confirm('Are you sure you want to delete this arrear?')) {
                return;
            }
            let dataId = $(this).attr('id');
            $.ajax({
                type: "POST",
                url: '/ArrearsSalaries/RemoveArrear/',
                data: { Id: dataId },
                success: function (data) {
                    if (data) {
                        alert("Arrear deleted successfully.");
                        window.location.reload();
                    }
                    else {
                        alert("Failed to delete this arrear.");
                    }
                }
                , error: function (xmlhttprequest, textstatus, message) {
                    if (textstatus === "timeout") {
                        alert("got timeout");
                    } else {
                        alert(textstatus);
                    }
                }
            });
        });

        $('.arr-days').unbind().change(function () {
            var dys = parseFloat($(this).val());
            
            var pdwage = parseFloat($(this).attr('data-pdWg'));
            if (isNaN(dys)) {
                dys = 0;
            }
            let ttl = (dys * pdwage);
            $(this).closest('tr').find('.ArrearsAmount').val(ttl);
        });
    });
</script>