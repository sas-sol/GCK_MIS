@model MeherEstateDevelopers.Models.Report_Amounts
<div id="infoutf" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script>

    Highcharts.chart('infoutf', {
        chart: {
            type: 'areaspline'
        },
        title: {
            text: ' Income & Expense Comparison'
        },
        legend: {
            layout: 'vertical',
            align: 'left',
            verticalAlign: 'top',
            x: 150,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
        },
        xAxis: {
            categories: @Html.Raw(Json.Encode(Model.Categories)),
            plotBands: [{ // visualize the weekend
                color: 'rgba(68, 170, 213, .2)'
            }]
        },
        yAxis: {
            title: {
                text: ''
            }
        },
        tooltip: {
            shared: true,
            pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b><br />',
            valuePrefix: 'Rs '
        },
        credits: {
            enabled: false
        },
        plotOptions: {
            areaspline: {
                fillOpacity: 0.5
            },
            lang: {
                thousandsSep: ','
            }
        },
        series:@Html.Raw(Json.Encode(Model.Series))
    });
</script>